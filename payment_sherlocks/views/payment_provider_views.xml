<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="payment_provider_form_sherlocks" model="ir.ui.view">
        <field name="name">payment.provider.form.inherit.sherlocks</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="inside">
                <group invisible="code != 'sherlocks'">
                    <field name="sherlocks_merchant_id"/>
                    <field name="sherlocks_secret_key" password="True"/>
                    <field name="sherlocks_key_version"/>
                </group>
            </group>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree view -->
    <record id="view_ftp_tariff_import_log_tree" model="ir.ui.view">
        <field name="name">ftp.tariff.import.log.tree</field>
        <field name="model">ftp.tariff.import.log</field>
        <field name="arch" type="xml">
            <list string="Tariff Import Logs" default_order="create_date desc">
                <field name="create_date"/>
                <field name="name"/>
                <field name="company_id"/>
                <field name="provider_id"/>
                <field name="protocol"/>
                <field name="file_data_name"/>
                <field name="file_name"/>
                <field name="remote_mtime"/>
                <field name="provider_last_connection_status"/>
                <field name="provider_last_run_at"/>
                <field name="state"/>
                <field name="total_lines"/>
                <field name="success_count"/>
                <field name="error_count"/>
                <field name="duration_sec"/>
                <field name="message"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_ftp_tariff_import_log_form" model="ir.ui.view">
        <field name="name">ftp.tariff.import.log.form</field>
        <field name="model">ftp.tariff.import.log</field>
        <field name="arch" type="xml">
            <form string="Tariff Import Log" create="false" edit="false">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="company_id" readonly="1"/>
                            <field name="provider_id" readonly="1"/>
                            <field name="protocol" readonly="1"/>
                            <field name="file_name" readonly="1"/>
                            <field name="file_data_name" readonly="1"/>
                            <field name="remote_mtime" readonly="1"/>
                        </group>
                        <group>
                            <field name="state" readonly="1"/>
                            <field name="started_at" readonly="1"/>
                            <field name="ended_at" readonly="1"/>
                            <field name="duration_sec" readonly="1"/>
                            <field name="total_lines" readonly="1"/>
                            <field name="success_count" readonly="1"/>
                            <field name="error_count" readonly="1"/>
                            <field name="provider_last_connection_status" readonly="1"/>
                            <field name="provider_last_run_at" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="message" readonly="1" widget="text"/>
                    </group>
                    <notebook>
                        <page string="Log Details">
                            <field name="log_html" readonly="1"/>
                        </page>
                        <page string="Source File">
                            <group>
                                <field name="file_data" filename="file_data_name" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ftp_tariff_import_logs" model="ir.actions.act_window">
        <field name="name">Tariff Import Logs</field>
        <field name="res_model">ftp.tariff.import.log</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>Review results of FTP/SFTP/IMAP tariff imports and detailed logs.</p>
        </field>
    </record>
    <!-- Action for mapping logs -->
    <record id="action_ftp_tariff_mapping_logs" model="ir.actions.act_window">
        <field name="name">Journaux de mapping</field>
        <field name="res_model">ftp.tariff.import.log</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_mapping','=',True)]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>Consultez les journaux des imports réalisés via le mapping.</p>
        </field>
    </record>
</odoo>

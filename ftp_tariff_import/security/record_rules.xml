<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Multi-company record rules: users see records of their companies -->
    <record id="rule_ftp_provider_company" model="ir.rule">
        <field name="name">FTP Provider multi-company</field>
        <field name="model_id" ref="model_ftp_provider"/>
        <field name="global" eval="False"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', user.company_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('ftp_tariff_import.group_ftp_tariff_user')), (4, ref('ftp_tariff_import.group_ftp_tariff_manager'))]"/>
    </record>

    <record id="rule_ftp_tariff_import_log_company" model="ir.rule">
        <field name="name">FTP Tariff Import Log multi-company</field>
        <field name="model_id" ref="model_ftp_tariff_import_log"/>
        <field name="global" eval="False"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', user.company_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('ftp_tariff_import.group_ftp_tariff_user')), (4, ref('ftp_tariff_import.group_ftp_tariff_manager'))]"/>
    </record>
    <record id="rule_ftp_mapping_template_company" model="ir.rule">
        <field name="name">FTP Mapping Template multi-company</field>
        <field name="model_id" ref="model_ftp_mapping_template"/>
        <field name="global" eval="False"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', user.company_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('ftp_tariff_import.group_ftp_tariff_user')), (4, ref('ftp_tariff_import.group_ftp_tariff_manager'))]"/>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_prestashop_product_sync" model="ir.cron">
            <field name="name">PrestaShop: Sync Products (every 60 min)</field>
            <field name="model_id" ref="prestashop_odoo_sync.model_prestashop_instance"/>
            <field name="state">code</field>
            <field name="code">model._cron_sync_products()</field>
            <field name="interval_number">60</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>
        <record id="ir_cron_prestashop_product_sync_daily" model="ir.cron">
            <field name="name">PrestaShop: Daily Product Sync</field>
            <field name="model_id" ref="prestashop_odoo_sync.model_prestashop_instance"/>
            <field name="state">code</field>
            <field name="code">model._cron_sync_products_daily()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="False"/>
        </record>
        <!-- Export products cron (hourly) -->
        <record id="ir_cron_prestashop_product_export" model="ir.cron">
            <field name="name">PrestaShop: Export Products to PS (hourly)</field>
            <field name="model_id" ref="prestashop_odoo_sync.model_prestashop_instance"/>
            <field name="state">code</field>
            <field name="code">model._cron_export_products()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="False"/>
        </record>
        <!-- Stock push cron (every 15 min) -->
        <record id="ir_cron_prestashop_stock_push" model="ir.cron">
            <field name="name">PrestaShop: Push Stock to PS (every 15 min)</field>
            <field name="model_id" ref="prestashop_odoo_sync.model_prestashop_instance"/>
            <field name="state">code</field>
            <field name="code">model._cron_push_stock()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="False"/>
        </record>
        <!-- Price push cron (hourly) -->
        <record id="ir_cron_prestashop_price_push" model="ir.cron">
            <field name="name">PrestaShop: Push Prices to PS (hourly)</field>
            <field name="model_id" ref="prestashop_odoo_sync.model_prestashop_instance"/>
            <field name="state">code</field>
            <field name="code">model._cron_push_prices()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="False"/>
        </record>
        <!-- Export queue processor (every 5 min) -->
        <record id="ir_cron_prestashop_export_queue" model="ir.cron">
            <field name="name">PrestaShop: Process Export Queue</field>
            <field name="model_id" ref="prestashop_odoo_sync.model_prestashop_instance"/>
            <field name="state">code</field>
            <field name="code">model._cron_process_export_queue()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="False"/>
        </record>
    </data>
</odoo>

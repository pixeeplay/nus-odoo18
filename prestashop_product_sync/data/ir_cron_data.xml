<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_prestashop_product_sync" model="ir.cron">
            <field name="name">PrestaShop: Sync Products (every 60 min)</field>
            <field name="model_id" ref="prestashop_odoo_sync.model_prestashop_instance"/>
            <field name="state">code</field>
            <field name="code">model._cron_sync_products()</field>
            <field name="interval_number">60</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>
        <record id="ir_cron_prestashop_product_sync_daily" model="ir.cron">
            <field name="name">PrestaShop: Daily Product Sync</field>
            <field name="model_id" ref="prestashop_odoo_sync.model_prestashop_instance"/>
            <field name="state">code</field>
            <field name="code">model._cron_sync_products_daily()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="False"/>
        </record>
    </data>
</odoo>

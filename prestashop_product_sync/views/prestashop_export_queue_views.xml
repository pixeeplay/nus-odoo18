<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================
         Export Queue – List View
         ============================================================ -->
    <record id="view_prestashop_export_queue_list" model="ir.ui.view">
        <field name="name">prestashop.export.queue.list</field>
        <field name="model">prestashop.export.queue</field>
        <field name="arch" type="xml">
            <list default_order="priority desc, create_date asc"
                  decoration-danger="state == 'error'"
                  decoration-success="state == 'done'"
                  decoration-info="state == 'processing'"
                  decoration-warning="state == 'pending'">
                <header>
                    <button name="action_queue_retry"
                            string="Retry Failed"
                            type="object"
                            class="btn-warning"/>
                    <button name="action_queue_cancel"
                            string="Cancel Selected"
                            type="object"
                            class="btn-danger"/>
                </header>
                <field name="create_date" string="Queued"/>
                <field name="product_tmpl_id" string="Product"/>
                <field name="operation" widget="badge"
                       decoration-info="operation in ('create', 'update')"
                       decoration-success="operation in ('price', 'stock')"
                       decoration-warning="operation == 'variant'"/>
                <field name="state" widget="badge"
                       decoration-danger="state == 'error'"
                       decoration-success="state == 'done'"
                       decoration-info="state == 'processing'"
                       decoration-warning="state == 'pending'"
                       decoration-muted="state == 'cancelled'"/>
                <field name="priority"/>
                <field name="retry_count"/>
                <field name="result_ps_id" string="PS ID" optional="show"/>
                <field name="error_message" optional="show"/>
                <field name="executed_date" optional="show"/>
                <field name="instance_id" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- ============================================================
         Export Queue – Form View
         ============================================================ -->
    <record id="view_prestashop_export_queue_form" model="ir.ui.view">
        <field name="name">prestashop.export.queue.form</field>
        <field name="model">prestashop.export.queue</field>
        <field name="arch" type="xml">
            <form string="Export Queue Item">
                <header>
                    <button name="action_queue_process_now"
                            string="Process Now"
                            type="object"
                            class="btn-primary"
                            invisible="state not in ('pending', 'error')"/>
                    <button name="action_queue_retry"
                            string="Retry"
                            type="object"
                            class="btn-warning"
                            invisible="state != 'error'"/>
                    <button name="action_queue_cancel"
                            string="Cancel"
                            type="object"
                            class="btn-danger"
                            invisible="state not in ('pending', 'error')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="pending,processing,done"/>
                </header>
                <sheet>
                    <group>
                        <group string="Details">
                            <field name="instance_id"/>
                            <field name="product_tmpl_id"/>
                            <field name="operation"/>
                            <field name="priority"/>
                            <field name="scheduled_date"/>
                            <field name="dry_run"/>
                        </group>
                        <group string="Result">
                            <field name="result_ps_id"/>
                            <field name="retry_count"/>
                            <field name="max_retries"/>
                            <field name="executed_date"/>
                        </group>
                    </group>
                    <group string="Error" invisible="not error_message">
                        <field name="error_message" nolabel="1" colspan="2" readonly="1"/>
                    </group>
                    <group string="Dry Run XML" invisible="not dry_run_xml">
                        <field name="dry_run_xml" nolabel="1" colspan="2" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================================================
         Export Queue – Search View
         ============================================================ -->
    <record id="view_prestashop_export_queue_search" model="ir.ui.view">
        <field name="name">prestashop.export.queue.search</field>
        <field name="model">prestashop.export.queue</field>
        <field name="arch" type="xml">
            <search string="Export Queue">
                <field name="product_tmpl_id"/>
                <field name="instance_id"/>
                <filter name="filter_pending" string="Pending"
                        domain="[('state', '=', 'pending')]"/>
                <filter name="filter_processing" string="Processing"
                        domain="[('state', '=', 'processing')]"/>
                <filter name="filter_done" string="Done"
                        domain="[('state', '=', 'done')]"/>
                <filter name="filter_error" string="Errors"
                        domain="[('state', '=', 'error')]"/>
                <separator/>
                <filter name="filter_create" string="Creates"
                        domain="[('operation', '=', 'create')]"/>
                <filter name="filter_update" string="Updates"
                        domain="[('operation', '=', 'update')]"/>
                <filter name="filter_price" string="Price"
                        domain="[('operation', '=', 'price')]"/>
                <filter name="filter_stock" string="Stock"
                        domain="[('operation', '=', 'stock')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_operation" string="Operation"
                            context="{'group_by': 'operation'}"/>
                    <filter name="group_instance" string="Instance"
                            context="{'group_by': 'instance_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================================
         Export Queue – Action & Menu
         ============================================================ -->
    <record id="action_prestashop_export_queue" model="ir.actions.act_window">
        <field name="name">Export Queue</field>
        <field name="res_model">prestashop.export.queue</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_pending': 1}</field>
    </record>

    <menuitem id="menu_prestashop_export_queue"
              name="Export Queue"
              parent="prestashop_odoo_sync.menu_prestashop_root"
              action="action_prestashop_export_queue"
              sequence="25"/>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Dashboard Form View -->
    <record id="view_prestashop_product_dashboard_form" model="ir.ui.view">
        <field name="name">prestashop.product.dashboard.form</field>
        <field name="model">prestashop.product.dashboard</field>
        <field name="arch" type="xml">
            <form string="PrestaShop Dashboard" create="false" edit="false" delete="false">
                <header>
                    <button name="action_fetch_products"
                            string="Fetch Products"
                            type="object"
                            class="btn-primary"
                            icon="fa-download"/>
                    <button name="action_import_all"
                            string="Import All Pending"
                            type="object"
                            class="btn-success"
                            icon="fa-play"/>
                    <button name="action_test_connection"
                            string="Test Connection"
                            type="object"
                            class="btn-secondary"
                            icon="fa-plug"/>
                    <button name="action_open_config"
                            string="Config"
                            type="object"
                            class="btn-secondary"
                            icon="fa-cog"/>
                </header>
                <sheet>
                    <!-- Connection Status Banner -->
                    <div class="alert alert-success" role="alert" invisible="not instance_connected">
                        <i class="fa fa-check-circle text-success me-2"/>
                        <strong>Connect&#233;</strong> &#8212;
                        <field name="instance_url" readonly="1" class="fw-bold d-inline"/>
                        <span class="ms-3" invisible="not last_product_sync">
                            | Dernier sync produits :
                            <field name="last_product_sync" readonly="1" class="d-inline"/>
                        </span>
                        <span class="ms-3" invisible="not last_order_sync">
                            | Dernier sync commandes :
                            <field name="last_order_sync" readonly="1" class="d-inline"/>
                        </span>
                    </div>
                    <div class="alert alert-danger" role="alert" invisible="instance_connected">
                        <i class="fa fa-exclamation-triangle text-danger me-2"/>
                        <strong>Non connect&#233;</strong> &#8212; Configurez votre instance PrestaShop.
                    </div>
                    <div class="alert alert-info" role="alert" invisible="not import_running">
                        <i class="fa fa-spinner fa-spin me-2"/>
                        <strong>Import en cours...</strong> La liste se rafra&#238;chit automatiquement.
                    </div>

                    <!-- Product Stats Cards -->
                    <h3 class="mt-2 mb-3">Produits</h3>
                    <div class="row mb-4">
                        <div class="col-lg-2 col-md-4 col-sm-6 mb-2">
                            <div class="card text-center border-primary">
                                <div class="card-body py-2">
                                    <h3 class="mb-0 text-primary"><field name="total_ps_products" readonly="1"/></h3>
                                    <small class="text-muted">Total Preview</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6 mb-2">
                            <div class="card text-center border-warning">
                                <div class="card-body py-2">
                                    <h3 class="mb-0 text-warning"><field name="total_pending" readonly="1"/></h3>
                                    <small class="text-muted">En attente</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6 mb-2">
                            <div class="card text-center border-success">
                                <div class="card-body py-2">
                                    <h3 class="mb-0 text-success"><field name="total_imported" readonly="1"/></h3>
                                    <small class="text-muted">Import&#233;s</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6 mb-2">
                            <div class="card text-center border-danger">
                                <div class="card-body py-2">
                                    <h3 class="mb-0 text-danger"><field name="total_errors" readonly="1"/></h3>
                                    <small class="text-muted">Erreurs</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6 mb-2">
                            <div class="card text-center" style="border-color: #6c757d;">
                                <div class="card-body py-2">
                                    <h3 class="mb-0 text-muted"><field name="total_skipped" readonly="1"/></h3>
                                    <small class="text-muted">Ignor&#233;s</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6 mb-2">
                            <div class="card text-center border-info">
                                <div class="card-body py-2">
                                    <h3 class="mb-0 text-info"><field name="total_odoo_products" readonly="1"/></h3>
                                    <small class="text-muted">Dans Odoo</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6 mb-2">
                            <div class="card text-center" style="border-color: #fd7e14;">
                                <div class="card-body py-2">
                                    <h3 class="mb-0" style="color: #fd7e14;"><field name="total_price_mismatch" readonly="1"/></h3>
                                    <small class="text-muted">Prix diff&#233;rents</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Order Stats Cards -->
                    <h3 class="mb-3">Commandes</h3>
                    <div class="row mb-4">
                        <div class="col-md-3 mb-2">
                            <div class="card text-center bg-light">
                                <div class="card-body py-2">
                                    <h4 class="mb-0"><field name="total_orders" readonly="1"/></h4>
                                    <small class="text-muted">Total commandes</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-2">
                            <div class="card text-center bg-light">
                                <div class="card-body py-2">
                                    <h4 class="mb-0"><field name="recent_orders_7d" readonly="1"/></h4>
                                    <small class="text-muted">7 derniers jours</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <separator string="Actions rapides"/>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <button name="action_open_previews"
                                    string="Preview Produits"
                                    type="object"
                                    class="btn-primary me-2 mb-2"
                                    icon="fa-list"/>
                            <button name="action_open_products"
                                    string="Produits Odoo"
                                    type="object"
                                    class="btn-secondary me-2 mb-2"
                                    icon="fa-cube"/>
                            <button name="action_open_orders"
                                    string="Commandes"
                                    type="object"
                                    class="btn-secondary me-2 mb-2"
                                    icon="fa-shopping-cart"/>
                            <button name="action_open_errors"
                                    string="Erreurs"
                                    type="object"
                                    class="btn-warning me-2 mb-2"
                                    icon="fa-exclamation-triangle"/>
                            <button name="action_retry_errors"
                                    string="Retry toutes les erreurs"
                                    type="object"
                                    class="btn-danger me-2 mb-2"
                                    icon="fa-repeat"/>
                            <button name="action_open_price_mismatches"
                                    string="Prix diff&#233;rents"
                                    type="object"
                                    class="btn-warning me-2 mb-2"
                                    icon="fa-balance-scale"/>
                            <button name="action_open_mappings"
                                    string="Field Mappings"
                                    type="object"
                                    class="btn-secondary me-2 mb-2"
                                    icon="fa-exchange"/>
                        </div>
                    </div>

                    <!-- Hidden fields for visibility conditions -->
                    <field name="instance_id" invisible="1"/>
                    <field name="instance_connected" invisible="1"/>
                    <field name="import_running" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Dashboard Action -->
    <record id="action_prestashop_product_dashboard" model="ir.actions.act_window">
        <field name="name">PrestaShop Dashboard</field>
        <field name="res_model">prestashop.product.dashboard</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <!-- Override the dashboard menu from prestashop_odoo_sync to point to our dashboard -->
    <record id="prestashop_odoo_sync.menu_prestashop_dashboard" model="ir.ui.menu">
        <field name="action" ref="action_prestashop_product_dashboard"/>
    </record>

    <!-- Add Products menu -->
    <menuitem id="menu_prestashop_products"
              name="Products"
              parent="prestashop_odoo_sync.menu_prestashop_sync_root"
              action="action_prestashop_products"
              sequence="15"/>

    <!-- Add Product Preview menu -->
    <menuitem id="menu_prestashop_product_preview"
              name="Product Preview"
              parent="prestashop_odoo_sync.menu_prestashop_sync_root"
              action="action_prestashop_product_preview"
              sequence="12"/>

    <!-- Add Field Mapping menu -->
    <menuitem id="menu_prestashop_field_mapping"
              name="Field Mapping"
              parent="prestashop_odoo_sync.menu_prestashop_config_root"
              action="action_prestashop_field_mapping"
              sequence="20"/>

</odoo>

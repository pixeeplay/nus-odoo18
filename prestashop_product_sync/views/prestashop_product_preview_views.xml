<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================
         Product Preview – List View (auto-refresh via JS)
         ============================================================ -->
    <record id="view_prestashop_product_preview_list" model="ir.ui.view">
        <field name="name">prestashop.product.preview.list</field>
        <field name="model">prestashop.product.preview</field>
        <field name="arch" type="xml">
            <list
                js_class="prestashop_product_preview_list"
                decoration-info="state == 'importing'"
                decoration-success="state in ('imported', 'updated')"
                decoration-danger="state == 'error'"
                decoration-muted="state == 'skipped'"
                multi_edit="1"
                default_order="state_sequence asc, prestashop_id asc">

                <header>
                    <button name="action_import_selected"
                            string="Import Selected"
                            type="object"
                            class="btn-primary"/>
                    <button name="action_skip"
                            string="Skip Selected"
                            type="object"
                            class="btn-secondary"/>
                    <button name="action_reset"
                            string="Reset to Pending"
                            type="object"
                            class="btn-secondary"/>
                    <button name="action_refetch_data"
                            string="Re-fetch from PS"
                            type="object"
                            class="btn-info"/>
                </header>

                <field name="state_sequence" column_invisible="1"/>
                <field name="image_preview" string="" widget="image" width="40px" optional="show"/>
                <field name="prestashop_id" string="PS ID" width="80px"/>
                <field name="name" string="Product Name"/>
                <field name="reference" string="SKU"/>
                <field name="price" string="Price (HT)" widget="monetary"/>
                <field name="ecotax" string="Eco-Tax" optional="show"/>
                <field name="tax_rate" string="Tax %" optional="show"/>
                <field name="tax_group_name" string="Tax Group" optional="hide"/>
                <field name="ean13" string="EAN13" optional="hide"/>
                <field name="active_in_ps" string="Active PS" widget="boolean"/>
                <field name="state" string="Status" widget="badge"
                       decoration-info="state == 'importing'"
                       decoration-success="state in ('imported', 'updated')"
                       decoration-danger="state == 'error'"
                       decoration-warning="state == 'pending'"
                       decoration-muted="state == 'skipped'"/>
                <field name="category_name" string="Category" optional="show"/>
                <field name="manufacturer_name" string="Manufacturer" optional="hide"/>
                <field name="image_count" string="Images" optional="hide"/>
                <field name="feature_count" string="Features" optional="hide"/>
                <field name="weight" string="Weight" optional="hide"/>
                <field name="imported_product_id" string="Odoo Product" optional="show"/>
                <field name="odoo_price" string="Odoo Price" optional="hide"/>
                <field name="price_diff" string="Price Diff" optional="hide"
                       decoration-danger="price_diff != 0"/>
                <field name="price_match" string="Price OK" widget="boolean" optional="hide"/>
                <field name="import_date" string="Imported" optional="show"/>
                <field name="error_message" string="Error" optional="hide"/>
                <button name="action_import_single"
                        string="Import"
                        type="object"
                        icon="fa-download"
                        invisible="state not in ('pending', 'error')"/>
                <button name="action_view_product"
                        string="View"
                        type="object"
                        icon="fa-external-link"
                        invisible="not imported_product_id"/>
            </list>
        </field>
    </record>

    <!-- ============================================================
         Product Preview – Form View
         ============================================================ -->
    <record id="view_prestashop_product_preview_form" model="ir.ui.view">
        <field name="name">prestashop.product.preview.form</field>
        <field name="model">prestashop.product.preview</field>
        <field name="arch" type="xml">
            <form string="Product Preview">
                <header>
                    <button name="action_import_single"
                            string="Import Now"
                            type="object"
                            class="btn-primary"
                            invisible="state not in ('pending', 'error')"/>
                    <button name="action_debug_fetch"
                            string="Debug Fetch (Raw API)"
                            type="object"
                            class="btn-warning"/>
                    <button name="action_view_product"
                            string="Open Product"
                            type="object"
                            class="btn-secondary"
                            invisible="not imported_product_id"/>
                    <button name="action_reset"
                            string="Reset"
                            type="object"
                            class="btn-secondary"
                            invisible="state in ('pending',)"/>
                    <button name="action_skip"
                            string="Skip"
                            type="object"
                            invisible="state not in ('pending',)"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="pending,importing,imported"/>
                </header>
                <sheet>
                    <field name="image_preview" widget="image" class="oe_avatar" readonly="1"/>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                        <div class="text-muted">
                            <span invisible="not reference">Ref: <field name="reference" readonly="1" class="d-inline"/> | </span>
                            <span invisible="not ean13">EAN: <field name="ean13" readonly="1" class="d-inline"/></span>
                        </div>
                    </div>
                    <group>
                        <group string="PrestaShop Info">
                            <field name="prestashop_id" readonly="1"/>
                            <field name="price" readonly="1" widget="monetary"/>
                            <field name="wholesale_price" readonly="1" widget="monetary"/>
                            <field name="ecotax" readonly="1"/>
                            <field name="weight" readonly="1"/>
                            <field name="active_in_ps" readonly="1"/>
                            <field name="instance_id" readonly="1"/>
                        </group>
                        <group string="Tax &amp; Classification">
                            <field name="tax_rate" readonly="1"/>
                            <field name="tax_group_name" readonly="1"/>
                            <field name="category_name" readonly="1"/>
                            <field name="manufacturer_name" readonly="1"/>
                            <field name="image_count" readonly="1"/>
                            <field name="feature_count" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Import Status">
                            <field name="imported_product_id" readonly="1"/>
                            <field name="import_date" readonly="1"/>
                            <field name="error_message" readonly="1"
                                   invisible="not error_message"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="mapping" string="Mapping PS → Odoo"
                              invisible="not imported_product_id">
                            <div class="alert alert-success" role="alert">
                                <strong>Mapped data:</strong>
                                This tab shows a side-by-side comparison of
                                PrestaShop source values and what was imported into Odoo.
                            </div>
                            <group>
                                <group string="PrestaShop Source">
                                    <field name="name" string="Name" readonly="1"/>
                                    <field name="reference" string="SKU" readonly="1"/>
                                    <field name="price" string="Price (HT)" readonly="1"/>
                                    <field name="wholesale_price" string="Wholesale" readonly="1"/>
                                    <field name="ean13" string="EAN13" readonly="1"/>
                                    <field name="category_name" string="Category" readonly="1"/>
                                    <field name="manufacturer_name" string="Manufacturer" readonly="1"/>
                                    <field name="image_count" string="Images" readonly="1"/>
                                    <field name="feature_count" string="Features" readonly="1"/>
                                </group>
                                <group string="Odoo Product (imported)">
                                    <field name="imported_product_id" string="Product" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page name="descriptions" string="Descriptions"
                              invisible="not description_preview and not description_short_preview">
                            <group string="Short Description (from PS)">
                                <field name="description_short_preview"
                                       readonly="1" nolabel="1"/>
                            </group>
                            <group string="Full Description (from PS)">
                                <field name="description_preview"
                                       readonly="1" nolabel="1"/>
                            </group>
                        </page>
                        <page name="raw_data" string="Raw API Data"
                              invisible="not raw_data">
                            <field name="raw_data" readonly="1" nolabel="1"
                                   widget="text"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================================================
         Product Preview – Search View
         ============================================================ -->
    <record id="view_prestashop_product_preview_search" model="ir.ui.view">
        <field name="name">prestashop.product.preview.search</field>
        <field name="model">prestashop.product.preview</field>
        <field name="arch" type="xml">
            <search string="Product Preview">
                <field name="name"/>
                <field name="reference"/>
                <field name="prestashop_id"/>
                <field name="ean13"/>
                <separator/>
                <filter name="filter_to_import"
                        string="To Import"
                        domain="[('state', 'in', ('pending', 'error'))]"/>
                <filter name="filter_pending"
                        string="Pending"
                        domain="[('state', '=', 'pending')]"/>
                <filter name="filter_importing"
                        string="Importing..."
                        domain="[('state', '=', 'importing')]"/>
                <filter name="filter_imported"
                        string="Imported"
                        domain="[('state', 'in', ('imported', 'updated'))]"/>
                <filter name="filter_errors"
                        string="Errors"
                        domain="[('state', '=', 'error')]"/>
                <filter name="filter_active_ps"
                        string="Active in PS"
                        domain="[('active_in_ps', '=', True)]"/>
                <filter name="filter_price_mismatch"
                        string="Price Mismatch"
                        domain="[('price_match', '=', False), ('imported_product_id', '!=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_state"
                            string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_instance"
                            string="Instance"
                            context="{'group_by': 'instance_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================================
         Product Preview – Actions
         ============================================================ -->
    <record id="action_prestashop_product_preview" model="ir.actions.act_window">
        <field name="name">Product Preview</field>
        <field name="res_model">prestashop.product.preview</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_to_import': 1}</field>
    </record>

    <!-- Menu item under PrestaShop -->
    <menuitem id="menu_prestashop_product_preview"
              name="Product Preview"
              parent="prestashop_odoo_sync.menu_prestashop_root"
              action="action_prestashop_product_preview"
              sequence="12"/>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- Marques en attente de validation - Vues                      -->
    <!-- ============================================================ -->

    <!-- Action: Re-vérifier toutes les marques pending -->
    <!-- binding_model_id: apparaît dans le menu Actions (⚙️) en vue liste -->
    <record id="action_reverify_all_pending" model="ir.actions.server">
        <field name="name">🔄 Re-vérifier les marques</field>
        <field name="model_id" ref="model_planete_pim_brand_pending"/>
        <field name="binding_model_id" ref="model_planete_pim_brand_pending"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = env['planete.pim.brand.pending'].action_reverify_all_pending()</field>
    </record>

    <!-- Vue List (liste) -->
    <record id="view_brand_pending_list" model="ir.ui.view">
        <field name="name">planete.pim.brand.pending.list</field>
        <field name="model">planete.pim.brand.pending</field>
        <field name="arch" type="xml">
            <list default_order="create_date desc" decoration-warning="state in ('pending','new_brand')" decoration-success="state == 'validated'" decoration-muted="state == 'ignored'">
                <field name="name" string="Marque fichier"/>
                <field name="provider_name" string="Fournisseur"/>
                <field name="product_count" string="Produits"/>
                <field name="sample_products_text" string="Exemples (EAN | Ref)" optional="show" widget="text"/>
                <field name="suggested_brand_id" string="Suggestion"/>
                <field name="created_brand_id" string="Marque créée" optional="hide"/>
                <field name="validated_brand_id" string="Marque validée"/>
                <field name="state" widget="badge" decoration-warning="state in ('pending','new_brand')" decoration-success="state == 'validated'" decoration-info="state == 'ignored'"/>
                <field name="create_uid" string="Créé par"/>
                <field name="import_date" string="Import"/>
                <field name="last_seen_date" string="Dernière vue"/>
            </list>
        </field>
    </record>

    <!-- Vue Form (formulaire) -->
    <record id="view_brand_pending_form" model="ir.ui.view">
        <field name="name">planete.pim.brand.pending.form</field>
        <field name="model">planete.pim.brand.pending</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_validate_with_existing" 
                            type="object" 
                            string="✅ Valider avec cette marque" 
                            class="btn-primary"
                            invisible="state not in ('pending','new_brand') or not validated_brand_id"
                            confirm="Confirmer l'association de cette marque à l'alias ?"/>
                    <button name="action_create_new_brand" 
                            type="object" 
                            string="➕ Créer nouvelle marque" 
                            class="btn-success"
                            invisible="state not in ('pending','new_brand')"
                            confirm="Créer une nouvelle marque avec ce nom ?"/>
                    <button name="action_ignore" 
                            type="object" 
                            string="🚫 Ignorer" 
                            class="btn-secondary"
                            invisible="state not in ('pending','new_brand')"
                            confirm="Ignorer cette marque ?"/>
                    <button name="action_reset_to_pending" 
                            type="object" 
                            string="↩️ Remettre en attente" 
                            invisible="state == 'pending'"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,validated,new_brand,ignored"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Informations fichier">
                            <field name="provider_id" readonly="1"/>
                            <field name="create_uid" string="Créé par" readonly="1"/>
                            <field name="product_count" readonly="1"/>
                            <field name="import_date" readonly="1"/>
                            <field name="last_seen_date" readonly="1"/>
                        </group>
                        <group string="Association">
                            <field name="suggested_brand_id" readonly="1" 
                                   help="Suggestion automatique basée sur le nom"/>
                            <field name="created_brand_id" readonly="1" options="{'no_create': true}"/>
                            <field name="validated_brand_id" 
                                   options="{'no_create': true}"
                                   placeholder="Sélectionner une marque existante..."
                                   help="Choisissez la marque à associer à ce nom"/>
                            <separator string="Créer une nouvelle marque"/>
                            <field name="new_brand_name" 
                                   placeholder="Ex: Magarantie.com"
                                   help="Saisissez le vrai nom de la marque. Le nom du fichier sera ajouté comme alias automatiquement."/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="notes" placeholder="Ajoutez des notes si besoin..."/>
                    </group>
                    <group string="📋 Exemples de produits" col="1">
                        <field name="sample_products_text" nolabel="1" widget="text" readonly="1" 
                               placeholder="Les exemples de produits s'afficheront ici..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="view_brand_pending_kanban" model="ir.ui.view">
        <field name="name">planete.pim.brand.pending.kanban</field>
        <field name="model">planete.pim.brand.pending</field>
        <field name="arch" type="xml">
            <kanban default_group_by="provider_id" class="o_kanban_mobile">
                <field name="name"/>
                <field name="provider_id"/>
                <field name="provider_name"/>
                <field name="product_count"/>
                <field name="suggested_brand_id"/>
                <field name="validated_brand_id"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.state.raw_value == 'pending' ? 'bg-warning-light' : record.state.raw_value == 'validated' ? 'bg-success-light' : ''}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <field name="state" widget="label_selection" options="{'classes': {'pending': 'warning', 'validated': 'success', 'new_brand': 'success', 'ignored': 'secondary'}}"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <span class="text-muted">
                                        <i class="fa fa-cubes" title="Produits"/> <field name="product_count"/> produit(s)
                                    </span>
                                    <br/>
                                    <t t-if="record.suggested_brand_id.raw_value">
                                        <span class="text-info">
                                            <i class="fa fa-lightbulb-o" title="Suggestion"/> Suggestion: <field name="suggested_brand_id"/>
                                        </span>
                                    </t>
                                    <t t-if="record.validated_brand_id.raw_value">
                                        <span class="text-success">
                                            <i class="fa fa-check" title="Validé"/> <field name="validated_brand_id"/>
                                        </span>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Search (filtres) -->
    <record id="view_brand_pending_search" model="ir.ui.view">
        <field name="name">planete.pim.brand.pending.search</field>
        <field name="model">planete.pim.brand.pending</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Nom marque"/>
                <field name="provider_id"/>
                <field name="suggested_brand_id"/>
                <field name="validated_brand_id"/>
                <separator/>
                <filter name="filter_pending" string="À traiter" domain="[('state', 'in', ['pending','new_brand'])]"/>
                <filter name="filter_validated" string="Validées" domain="[('state', '=', 'validated')]"/>
                <filter name="filter_ignored" string="Ignorées" domain="[('state', '=', 'ignored')]"/>
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter name="group_provider" string="Fournisseur" context="{'group_by': 'provider_id'}"/>
                    <filter name="group_state" string="État" context="{'group_by': 'state'}"/>
                    <filter name="group_import_date" string="Date d'import" context="{'group_by': 'import_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_brand_pending" model="ir.actions.act_window">
        <field name="name">Marques à vérifier</field>
        <field name="res_model">planete.pim.brand.pending</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_brand_pending_search"/>
        <field name="context">{'search_default_filter_pending': 1, 'search_default_group_provider': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune marque en attente de validation
            </p>
            <p>
                Les marques inconnues rencontrées lors des imports apparaîtront ici.
                Vous pourrez les associer à une marque existante ou créer une nouvelle marque.
            </p>
            <p>
                <strong>💡 Astuce :</strong> Cliquez sur "🔄 Re-vérifier les marques" pour résoudre automatiquement
                les marques qui correspondent à des marques existantes ou à leurs aliases.
            </p>
        </field>
    </record>


</odoo>

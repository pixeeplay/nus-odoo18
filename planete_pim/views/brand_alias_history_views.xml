<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue List: Historique des alias -->
    <record id="view_planete_pim_brand_alias_history_tree" model="ir.ui.view">
        <field name="name">planete.pim.brand.alias.history.list</field>
        <field name="model">planete.pim.brand.alias.history</field>
        <field name="arch" type="xml">
            <list string="Historique des alias de marque" create="false" delete="false">
                <field name="create_date" string="Date"/>
                <field name="alias_name" string="Alias"/>
                <field name="brand_name" string="Marque"/>
                <field name="provider_name" string="Fournisseur"/>
                <field name="source_ean" string="EAN source" optional="hide"/>
                <field name="auto_created" string="Auto" widget="boolean"/>
                <field name="create_uid" string="Créé par" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Vue Form: Historique des alias -->
    <record id="view_planete_pim_brand_alias_history_form" model="ir.ui.view">
        <field name="name">planete.pim.brand.alias.history.form</field>
        <field name="model">planete.pim.brand.alias.history</field>
        <field name="arch" type="xml">
            <form string="Détails de l'alias" create="false" delete="false">
                <sheet>
                    <group>
                        <group>
                            <field name="alias_name"/>
                            <field name="brand_id"/>
                            <field name="brand_name"/>
                        </group>
                        <group>
                            <field name="provider_id"/>
                            <field name="provider_name"/>
                            <field name="source_ean"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="create_date"/>
                            <field name="create_uid"/>
                            <field name="auto_created"/>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Search: Historique des alias -->
    <record id="view_planete_pim_brand_alias_history_search" model="ir.ui.view">
        <field name="name">planete.pim.brand.alias.history.search</field>
        <field name="model">planete.pim.brand.alias.history</field>
        <field name="arch" type="xml">
            <search string="Rechercher alias">
                <field name="alias_name"/>
                <field name="brand_name"/>
                <field name="provider_name"/>
                <field name="source_ean"/>
                <separator/>
                <filter string="Créés automatiquement" name="auto_created" domain="[('auto_created', '=', True)]"/>
                <filter string="Créés manuellement" name="manual_created" domain="[('auto_created', '=', False)]"/>
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter string="Marque" name="group_brand" context="{'group_by': 'brand_id'}"/>
                    <filter string="Fournisseur" name="group_provider" context="{'group_by': 'provider_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'create_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action: Historique des alias -->
    <record id="action_planete_pim_brand_alias_history" model="ir.actions.act_window">
        <field name="name">Historique des alias</field>
        <field name="res_model">planete.pim.brand.alias.history</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_auto_created': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun alias de marque trouvé
            </p>
            <p>
                L'historique des alias permet de suivre toutes les correspondances de noms de marques
                créées automatiquement lors des imports ou manuellement par validation.
            </p>
        </field>
    </record>
</odoo>

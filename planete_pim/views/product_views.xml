<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ajouter le champ "Créé par fournisseur" dans la vue formulaire produit -->
    <record id="product_template_form_view_created_by" model="ir.ui.view">
        <field name="name">product.template.form.created.by</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Ajouter dans le notebook après l'onglet general_information -->
            <notebook position="inside">
                <page string="Import Info" name="import_info">
                    <group>
                        <group>
                            <field name="x_created_by_supplier_id" 
                                   string="Créé par fournisseur"
                                   readonly="1"/>
                            <field name="x_origin_supplier_id" 
                                   string="Dernier import de"
                                   readonly="1"/>
                        </group>
                        <group>
                            <field name="x_last_import_date" 
                                   string="Dernière MAJ import"
                                   readonly="1"/>
                            <field name="x_last_digital_date" 
                                   string="Dernière présence Digital"
                                   readonly="1"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Ajouter le champ dans la vue liste (tree) des produits -->
    <record id="product_template_tree_view_created_by" model="ir.ui.view">
        <field name="name">product.template.tree.created.by</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <!-- Ajouter après le nom du produit -->
            <field name="name" position="after">
                <field name="x_created_by_supplier_id" 
                       string="Créé par"
                       optional="hide"/>
            </field>
        </field>
    </record>
</odoo>

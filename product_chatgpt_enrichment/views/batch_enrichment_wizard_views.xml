<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_batch_enrichment_wizard_form" model="ir.ui.view">
        <field name="name">batch.enrichment.wizard.form</field>
        <field name="model">batch.enrichment.wizard</field>
        <field name="arch" type="xml">
            <form string="Enrichissement IA par lot">
                <group>
                    <group>
                        <field name="product_count" readonly="1"/>
                        <field name="estimated_time" readonly="1"/>
                    </group>
                    <group>
                        <field name="priority"/>
                        <field name="skip_already_enriched"/>
                        <field name="skip_already_queued"/>
                    </group>
                </group>
                <group string="Produits sélectionnés">
                    <field name="product_ids" nolabel="1" readonly="1">
                        <list create="0" delete="0">
                            <field name="name"/>
                            <field name="default_code"/>
                            <field name="ai_enrichment_date" string="Dernier enrichissement IA"/>
                        </list>
                    </field>
                </group>
                <footer>
                    <button name="action_enqueue"
                            string="Ajouter à la file d'attente"
                            type="object"
                            class="btn-primary"
                            icon="fa-plus-circle"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>

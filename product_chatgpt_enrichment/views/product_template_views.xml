<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Product Template Form View -->
        <record id="view_product_template_form_chatgpt" model="ir.ui.view">
            <field name="name">product.template.form.chatgpt</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                
                <!-- Add buttons in header -->
                <xpath expr="//header" position="inside">
                    <button name="action_enrich_with_chatgpt" 
                            string="Enrich with ChatGPT" 
                            type="object" 
                            class="btn-primary"
                            icon="fa-magic"
                            help="Generate enhanced product description using ChatGPT"/>
                    <button name="action_clear_enrichment" 
                            string="Clear AI Content" 
                            type="object" 
                            class="btn-secondary"
                            icon="fa-eraser"
                            invisible="not chatgpt_enriched"
                            help="Clear ChatGPT generated content"/>
                </xpath>

                <!-- Add enrichment status indicator -->
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" 
                            name="action_view_chatgpt_enrichment"
                            type="object" 
                            icon="fa-robot"
                            invisible="not chatgpt_enriched">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">AI Enriched</span>
                            <span class="o_stat_value">
                                <field name="chatgpt_last_enrichment" widget="date"/>
                            </span>
                        </div>
                    </button>
                </xpath>

                <!-- Add ChatGPT fields in a new notebook page -->
                <xpath expr="//notebook" position="inside">
                    <page string="AI Enrichment" name="chatgpt_enrichment">
                        <header>
                            <button name="action_enrich_with_chatgpt" string="Run Enrichment" type="object" class="btn-primary" icon="fa-magic"/>
                            <button name="action_clear_enrichment" string="Clear Data" type="object" class="btn-secondary" icon="fa-trash" invisible="not chatgpt_enriched"/>
                        </header>
                        
                        <div class="row">
                            <div class="col-md-8">
                                <group string="Main AI Output">
                                    <field name="chatgpt_content" nolabel="1" readonly="1" options="{'style-inline': true}"/>
                                </group>
                            </div>
                            <div class="col-md-4">
                                <group string="Active Configuration">
                                    <field name="chatgpt_config_id" readonly="1"/>
                                </group>
                                <group string="Registered Prompts">
                                    <field name="chatgpt_prompt_ids" nolabel="1">
                                        <list create="0" delete="0" edit="0">
                                            <field name="name"/>
                                            <field name="language"/>
                                            <field name="active" widget="boolean_toggle"/>
                                        </list>
                                    </field>
                                </group>
                                <group name="chatgpt_status" string="AI Status">
                                    <field name="chatgpt_enriched" readonly="1" widget="boolean_toggle"/>
                                    <field name="chatgpt_last_enrichment" invisible="not chatgpt_enriched"/>
                                    <field name="chatgpt_auto_align" widget="boolean_toggle"/>
                                </group>
                                <div class="bg-light p-3 border rounded">
                                    <h5 class="text-primary"><i class="fa fa-history mr-2"/> Activity Log</h5>
                                    <field name="chatgpt_log" nolabel="1" readonly="1"/>
                                </div>
                            </div>
                        </div>
                    </page>

                    <page string="Market Intel" name="chatgpt_market_intel">
                        <header>
                            <button name="action_run_deep_search" string="Refresh Market Data" type="object" class="btn-primary" icon="fa-search-plus"/>
                            <button name="action_align_price" string="Auto-Align Price" type="object" class="btn-success" icon="fa-balance-scale" invisible="not chatgpt_competitor_price_ids"/>
                        </header>
                        <div class="row">
                            <div class="col-md-7">
                                <group string="Competitor Prices (France)">
                                    <div class="alert alert-warning mb-2" invisible="not chatgpt_suggested_price">
                                        <strong>AI Suggestion:</strong> Align price to <field name="chatgpt_suggested_price" widget="monetary" options="{'currency_field': 'currency_id'}"/> based on current strategy.
                                    </div>
                                    <div class="alert alert-info border small py-1" invisible="not chatgpt_competitor_price_ids">
                                        <i class="fa fa-info-circle mr-1"/> AI found the following prices. Use "Auto-Align" to follow your global strategy, or click the <i class="fa fa-check-circle text-success"/> icon to force apply a specific price.
                                    </div>
                                    <field name="chatgpt_competitor_price_ids" nolabel="1">
                                        <list editable="bottom" create="0">
                                            <field name="source" readonly="1"/>
                                            <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                                            <field name="currency_id" invisible="1"/>
                                            <field name="url" widget="url" string="Link" text="View Page"/>
                                            <button name="action_apply_this_price" icon="fa-check-circle text-success" title="Apply this price" type="object"/>
                                            <field name="last_update" widget="datetime" optional="hide"/>
                                        </list>
                                    </field>
                                </group>
                                <group string="Market Research Content" invisible="not chatgpt_web_search_log">
                                    <field name="chatgpt_web_search_log" nolabel="1" readonly="1"/>
                                </group>
                                <group string="Raw Search Data" invisible="not chatgpt_debug_show_raw">
                                    <field name="chatgpt_raw_serp_results" nolabel="1" readonly="1" options="{'style-inline': true}"/>
                                </group>
                            </div>
                            <div class="col-md-5">
                                <group string="Official Media &amp; Videos">
                                    <field name="chatgpt_video_ids" nolabel="1">
                                        <list create="0">
                                            <field name="platform" invisible="1"/>
                                            <button name="action_open_video" icon="fa-youtube-play text-danger" title="Watch on YouTube" type="object"/>
                                            <field name="name" string="Video Title" readonly="1"/>
                                            <button name="action_set_primary" icon="fa-star text-warning" title="Set as preferred video" type="object"/>
                                            <field name="video_url" widget="url" string="Watch" text="Open Link" optional="hide"/>
                                        </list>
                                    </field>
                                </group>
                                <group string="Deep Scraping Logs">
                                    <field name="chatgpt_deep_enrichment_log" nolabel="1" readonly="1"/>
                                </group>
                            </div>
                        </div>
                    <page string="Media Discovery" name="chatgpt_media_discovery">
                        <header>
                            <button name="action_find_official_images" string="Find Official Photos" type="object" class="btn-primary" icon="fa-camera"/>
                        </header>
                        <div class="o_kanban_view o_kanban_ungrouped">
                            <field name="chatgpt_discovered_media_ids" mode="kanban" nolabel="1">
                                <kanban>
                                    <field name="id"/>
                                    <field name="image_preview"/>
                                    <field name="name"/>
                                    <field name="url"/>
                                    <field name="source"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click d-flex flex-column p-0 border rounded overflow-hidden" style="width: 200px; height: 260px;">
                                                <div class="d-flex align-items-center justify-content-center bg-light" style="height: 150px;">
                                                    <t t-if="record.image_preview.raw_value">
                                                        <img t-att-src="kanban_image('product.discovered.media', 'image_preview', record.id.raw_value)" 
                                                             class="img-fluid" t-att-title="record.name.value" style="max-height: 100%; max-width: 100%; object-fit: contain;"/>
                                                    </t>
                                                    <t t-else="">
                                                        <i class="fa fa-picture-o fa-3x text-muted"/>
                                                    </t>
                                                </div>
                                                <div class="p-2 flex-grow-1 overflow-hidden">
                                                    <strong class="d-block text-truncate" t-att-title="record.name.value"><t t-esc="record.name.value"/></strong>
                                                    <small class="text-muted d-block text-truncate" t-att-title="record.url.value"><t t-esc="record.source.value"/></small>
                                                </div>
                                                <div class="d-flex border-top">
                                                    <button name="action_import_as_main" type="object" class="btn btn-sm btn-link flex-fill text-primary" title="Main Image">
                                                        <i class="fa fa-photo mr-1"/> Main
                                                    </button>
                                                    <button name="action_import_to_gallery" type="object" class="btn btn-sm btn-link flex-fill text-success" title="Add to Gallery">
                                                        <i class="fa fa-plus-circle mr-1"/> Gallery
                                                    </button>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </div>
                    </page>
                </xpath>

            </field>
        </record>
        
        <!-- Batch Price Alignment Action -->
        <record id="action_product_align_price_batch" model="ir.actions.server">
            <field name="name">Align Price with AI Competitors</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                for record in records:
                    record.action_align_price()
            </field>
        </record>

        <!-- Batch Enrichment Action -->
        <record id="action_product_enrich_batch" model="ir.actions.server">
            <field name="name">Enrich with ChatGPT</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                if records:
                    action = records.action_enrich_batch()
            </field>
        </record>

    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_ai_enrichment" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.ai.enrichment</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="AI Enrichment" string="AI Enrichment" groups="base.group_system">
                    <block title="Pipeline Control" name="ai_pipeline_control">
                        <setting string="Pipeline Status"
                                 help="Start or stop the automatic AI enrichment pipeline (SearXNG + Ollama).">
                            <div class="d-flex align-items-center gap-3 mt-2">
                                <field name="ai_enrichment_paused" invisible="1"/>
                                <button name="action_ai_start_pipeline"
                                        string="Start Pipeline"
                                        type="object"
                                        class="btn-success"
                                        icon="fa-play"
                                        invisible="not ai_enrichment_paused"/>
                                <button name="action_ai_stop_pipeline"
                                        string="Stop Pipeline"
                                        type="object"
                                        class="btn-danger"
                                        icon="fa-stop"
                                        invisible="ai_enrichment_paused"/>
                                <span class="badge text-bg-success fs-6"
                                      invisible="ai_enrichment_paused">
                                    <i class="fa fa-circle me-1"/> Running
                                </span>
                                <span class="badge text-bg-danger fs-6"
                                      invisible="not ai_enrichment_paused">
                                    <i class="fa fa-circle me-1"/> Stopped
                                </span>
                            </div>
                        </setting>
                        <setting string="Queue Status"
                                 help="Current state of the enrichment queue.">
                            <div class="d-flex gap-4 mt-2">
                                <span>
                                    <i class="fa fa-clock-o me-1"/>
                                    <strong><field name="ai_enrichment_queue_count" class="d-inline"/></strong>
                                    items in queue
                                </span>
                                <span>
                                    <i class="fa fa-check-circle me-1 text-success"/>
                                    <strong><field name="ai_enrichment_done_count" class="d-inline"/></strong>
                                    completed
                                </span>
                            </div>
                        </setting>
                    </block>
                    <block title="Quick Actions" name="ai_quick_actions">
                        <div class="mt-3">
                            <button name="action_ai_open_queue"
                                    string="Open Queue"
                                    type="object"
                                    class="btn-primary me-2"
                                    icon="fa-list"/>
                            <button name="action_ai_open_config"
                                    string="AI Providers"
                                    type="object"
                                    class="btn-secondary"
                                    icon="fa-cogs"/>
                        </div>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>

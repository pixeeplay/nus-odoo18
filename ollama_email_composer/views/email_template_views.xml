<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Template Actions -->
    <record id="action_email_templates" model="ir.actions.act_window">
        <field name="name">AI Email Templates</field>
        <field name="res_model">ollama.email.template</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_email_logs" model="ir.actions.act_window">
        <field name="name">Email AI Logs</field>
        <field name="res_model">ollama.log</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('res_model', '=', 'email.compose.ai.wizard')]</field>
    </record>

    <!-- Template List -->
    <record id="view_email_template_list" model="ir.ui.view">
        <field name="name">ollama.email.template.list</field>
        <field name="model">ollama.email.template</field>
        <field name="arch" type="xml">
            <list string="AI Email Templates" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="tone" widget="badge"/>
                <field name="system_prompt"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Template Form -->
    <record id="view_email_template_form" model="ir.ui.view">
        <field name="name">ollama.email.template.form</field>
        <field name="model">ollama.email.template</field>
        <field name="arch" type="xml">
            <form string="AI Email Template">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="tone"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="System Prompt">
                            <field name="system_prompt" nolabel="1"
                                   placeholder="Instructions for the AI when generating emails with this tone..."/>
                        </page>
                        <page string="Example">
                            <field name="example" nolabel="1"
                                   placeholder="An example email to guide the AI style..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================ -->
    <!-- Weekly Cron: Generate AI Timesheet Summaries (Monday 7:00)   -->
    <!-- ============================================================ -->
    <record id="ir_cron_generate_weekly_summaries" model="ir.cron">
        <field name="name">AI Timesheet: Generate Weekly Summaries</field>
        <field name="model_id" ref="model_timesheet_ai_summary"/>
        <field name="state">code</field>
        <field name="code">model.generate_weekly_summaries()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">weeks</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="active" eval="False"/>
        <field name="nextcall" eval="(DateTime.now().replace(hour=7, minute=0, second=0))"/>
    </record>

</odoo>

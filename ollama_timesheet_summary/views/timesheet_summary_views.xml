<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================ -->
    <!-- Timesheet AI Summary: List View                              -->
    <!-- ============================================================ -->
    <record id="timesheet_ai_summary_list" model="ir.ui.view">
        <field name="name">timesheet.ai.summary.list</field>
        <field name="model">timesheet.ai.summary</field>
        <field name="arch" type="xml">
            <list string="AI Timesheet Summaries"
                  decoration-info="state == 'draft'"
                  decoration-success="state == 'generated'"
                  decoration-muted="state == 'sent'">
                <field name="employee_id"/>
                <field name="week_start"/>
                <field name="week_end"/>
                <field name="total_hours" widget="float_time"/>
                <field name="ai_highlights" optional="show"/>
                <field name="ai_concerns" optional="show"/>
                <field name="state"
                       widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'generated'"
                       decoration-muted="state == 'sent'"/>
            </list>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Timesheet AI Summary: Form View                              -->
    <!-- ============================================================ -->
    <record id="timesheet_ai_summary_form" model="ir.ui.view">
        <field name="name">timesheet.ai.summary.form</field>
        <field name="model">timesheet.ai.summary</field>
        <field name="arch" type="xml">
            <form string="AI Timesheet Summary">
                <header>
                    <button name="action_generate_summary"
                            string="Generate Summary"
                            type="object"
                            class="btn-primary"
                            icon="fa-bolt"
                            invisible="state != 'draft'"/>
                    <button name="action_generate_summary"
                            string="Regenerate"
                            type="object"
                            class="btn-secondary"
                            icon="fa-refresh"
                            invisible="state == 'sent'"
                            confirm="This will regenerate the AI summary. Continue?"/>
                    <button name="action_send_summary"
                            string="Mark as Sent"
                            type="object"
                            class="btn-success"
                            icon="fa-paper-plane"
                            invisible="state != 'generated'"/>
                    <button name="action_reset_draft"
                            string="Reset to Draft"
                            type="object"
                            class="btn-secondary"
                            icon="fa-undo"
                            invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,generated,sent"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="employee_id" readonly="state != 'draft'"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Period">
                            <field name="week_start" readonly="state != 'draft'"/>
                            <field name="week_end" readonly="state != 'draft'"/>
                            <field name="total_hours" widget="float_time"/>
                        </group>
                        <group string="Status">
                            <field name="state" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- AI Summary Tab -->
                        <page string="AI Summary" name="ai_summary">
                            <group string="Summary">
                                <field name="ai_summary" nolabel="1"
                                       colspan="2" readonly="1"
                                       class="oe_read_only"/>
                            </group>
                            <group>
                                <group string="Key Highlights">
                                    <field name="ai_highlights" nolabel="1"
                                           readonly="1"/>
                                </group>
                                <group string="Concerns / Alerts">
                                    <field name="ai_concerns" nolabel="1"
                                           readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <!-- Project Breakdown Tab -->
                        <page string="Project Breakdown" name="project_breakdown">
                            <group>
                                <field name="project_breakdown" nolabel="1"
                                       colspan="2" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Timesheet AI Summary: Search View                            -->
    <!-- ============================================================ -->
    <record id="timesheet_ai_summary_search" model="ir.ui.view">
        <field name="name">timesheet.ai.summary.search</field>
        <field name="model">timesheet.ai.summary</field>
        <field name="arch" type="xml">
            <search string="Search Summaries">
                <field name="employee_id"/>
                <field name="week_start"/>
                <filter string="Draft" name="draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Generated" name="generated"
                        domain="[('state', '=', 'generated')]"/>
                <filter string="Sent" name="sent"
                        domain="[('state', '=', 'sent')]"/>
                <separator/>
                <filter string="Overtime (&gt;45h)" name="overtime"
                        domain="[('total_hours', '&gt;', 45.0)]"/>
                <filter string="Underlog (&lt;30h)" name="underlog"
                        domain="[('total_hours', '&gt;', 0), ('total_hours', '&lt;', 30.0)]"/>
                <separator/>
                <filter string="This Week" name="this_week"
                        domain="[('week_start', '&gt;=', (context_today() - relativedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter string="Last Week" name="last_week"
                        domain="[('week_start', '&gt;=', (context_today() - relativedelta(days=context_today().weekday()+7)).strftime('%Y-%m-%d')), ('week_start', '&lt;', (context_today() - relativedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_employee"
                            context="{'group_by': 'employee_id'}"/>
                    <filter string="Week" name="group_week"
                            context="{'group_by': 'week_start:week'}"/>
                    <filter string="Status" name="group_state"
                            context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Action: Timesheet AI Summaries                               -->
    <!-- ============================================================ -->
    <record id="action_timesheet_ai_summary" model="ir.actions.act_window">
        <field name="name">AI Timesheet Summaries</field>
        <field name="res_model">timesheet.ai.summary</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="timesheet_ai_summary_search"/>
        <field name="context">{'search_default_generated': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No AI timesheet summaries yet.
            </p>
            <p>
                Use the Dashboard to generate weekly AI summaries
                of your team's timesheets.
            </p>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Menu: Summaries under AI Timesheets root                     -->
    <!-- ============================================================ -->
    <menuitem id="menu_ai_timesheet_summaries"
              name="Summaries"
              parent="menu_ai_timesheet_root"
              action="action_timesheet_ai_summary"
              sequence="10"/>

</odoo>

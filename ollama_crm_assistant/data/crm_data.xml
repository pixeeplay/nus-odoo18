<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Daily cron: score new leads -->
        <record id="ir_cron_score_leads" model="ir.cron">
            <field name="name">AI CRM: Score New Leads</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="state">code</field>
            <field name="code">
leads = model.search([('ai_score', '=', 0), ('stage_id.is_won', '=', False)], limit=50)
for lead in leads:
    try:
        lead.action_score_lead()
    except Exception:
        pass
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="False"/>
        </record>
    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Cron: poll Wing API for tracking status updates -->
        <record id="ir_cron_wing_update_tracking" model="ir.cron">
            <field name="name">Wing: Update Tracking Status</field>
            <field name="model_id" ref="stock_delivery.model_delivery_carrier"/>
            <field name="state">code</field>
            <field name="code">model._cron_wing_update_tracking()</field>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="active">True</field>
        </record>

    </data>
</odoo>

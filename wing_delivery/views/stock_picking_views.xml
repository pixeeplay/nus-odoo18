<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================
         Inherit stock.picking form: add Wing status fields
         ============================================================ -->
    <record id="view_picking_form_wing" model="ir.ui.view">
        <field name="name">stock.picking.form.wing</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <!-- Add Wing status group in the Additional Info tab -->
            <xpath expr="//group[@name='other_infos']" position="after">
                <group string="Wing Shipping"
                       invisible="delivery_type != 'wing' or not wing_order_id"
                       name="wing_info">
                    <group>
                        <field name="wing_order_id" readonly="1"/>
                        <field name="wing_fulfillment_order_id" readonly="1"/>
                        <field name="wing_wing_ref" readonly="1"/>
                    </group>
                    <group>
                        <field name="wing_fulfillment_status" readonly="1"
                               widget="badge"
                               decoration-info="wing_fulfillment_status == 'open'"
                               decoration-warning="wing_fulfillment_status == 'in_progress'"
                               decoration-success="wing_fulfillment_status in ('shipped', 'delivered')"
                               decoration-danger="wing_fulfillment_status == 'cancelled'"/>
                        <field name="wing_parcel_status" readonly="1"
                               widget="badge"
                               decoration-info="wing_parcel_status in ('pending', 'labeled')"
                               decoration-warning="wing_parcel_status in ('shipped', 'in_transit')"
                               decoration-success="wing_parcel_status == 'delivered'"/>
                        <button name="action_wing_refresh_status"
                                string="Refresh Wing Status"
                                type="object"
                                class="btn-secondary"
                                icon="fa-refresh"
                                invisible="not wing_fulfillment_order_id"/>
                    </group>
                </group>
            </xpath>

        </field>
    </record>

</odoo>

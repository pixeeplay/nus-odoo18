<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_magarantie_sale_tree" model="ir.ui.view">
        <field name="name">magarantie.sale.tree</field>
        <field name="model">magarantie.sale</field>
        <field name="arch" type="xml">
            <list decoration-danger="state == 'error'"
                  decoration-success="state == 'confirmed'"
                  decoration-info="state == 'sent'"
                  default_order="create_date desc">
                <field name="idvente"/>
                <field name="nom"/>
                <field name="prenom"/>
                <field name="warranty_id"/>
                <field name="rubrique"/>
                <field name="garantie_prix" string="Warranty Price"/>
                <field name="produit_prix" string="Product Price"/>
                <field name="date_achat"/>
                <field name="sale_order_id"/>
                <field name="state" widget="badge"
                       decoration-danger="state == 'error'"
                       decoration-success="state == 'confirmed'"
                       decoration-info="state == 'sent'"
                       decoration-warning="state == 'draft'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_magarantie_sale_form" model="ir.ui.view">
        <field name="name">magarantie.sale.form</field>
        <field name="model">magarantie.sale</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_send_to_api"
                            string="Send to MaGarantie"
                            type="object"
                            class="btn-primary"
                            icon="fa-paper-plane"
                            invisible="state != 'draft'"
                            confirm="This will submit the warranty sale to MaGarantie. Continue?"/>
                    <button name="action_send_commissioning_date"
                            string="Send Commissioning Date"
                            type="object"
                            class="btn-secondary"
                            icon="fa-calendar"
                            invisible="state not in ('sent', 'confirmed')"/>
                    <button name="action_fetch_documents"
                            string="Download Documents"
                            type="object"
                            class="btn-secondary"
                            icon="fa-download"
                            invisible="not idvente"/>
                    <button name="action_refresh_status"
                            string="Refresh Status"
                            type="object"
                            class="btn-secondary"
                            icon="fa-refresh"
                            invisible="not idvente"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,sent,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="idvente" readonly="1"
                                   placeholder="Not yet submitted"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Odoo Links">
                            <field name="sale_order_id"/>
                            <field name="sale_order_line_id"/>
                            <field name="partner_id"/>
                            <field name="product_template_id"/>
                            <field name="warranty_id"/>
                        </group>
                        <group string="Warranty Info">
                            <field name="idgarantie"/>
                            <field name="rubrique"/>
                            <field name="garantie_prix"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Customer" name="customer">
                            <group>
                                <group>
                                    <field name="nom"/>
                                    <field name="prenom"/>
                                    <field name="email"/>
                                    <field name="telephone"/>
                                </group>
                                <group>
                                    <field name="adresse"/>
                                    <field name="adresse2"/>
                                    <field name="code_postal"/>
                                    <field name="ville"/>
                                </group>
                            </group>
                        </page>
                        <page string="Product" name="product">
                            <group>
                                <group>
                                    <field name="produit_prix"/>
                                    <field name="date_achat"/>
                                    <field name="produit_marque"/>
                                    <field name="produit_modele"/>
                                    <field name="produit_num_serie"/>
                                </group>
                                <group>
                                    <field name="date_mise_en_service"/>
                                    <field name="custom"/>
                                </group>
                            </group>
                        </page>
                        <page string="Documents" name="documents"
                              invisible="not idvente">
                            <group>
                                <field name="certificat_garantie"
                                       filename="certificat_garantie_filename"/>
                                <field name="certificat_garantie_filename" invisible="1"/>
                                <field name="notice_utilisation"
                                       filename="notice_utilisation_filename"/>
                                <field name="notice_utilisation_filename" invisible="1"/>
                                <field name="ipid_document"
                                       filename="ipid_document_filename"/>
                                <field name="ipid_document_filename" invisible="1"/>
                            </group>
                        </page>
                        <page string="API Response" name="api_response"
                              invisible="not api_response and state != 'error'">
                            <group>
                                <field name="api_response" readonly="1"/>
                                <field name="error_message" readonly="1"
                                       invisible="state != 'error'"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_magarantie_sale_search" model="ir.ui.view">
        <field name="name">magarantie.sale.search</field>
        <field name="model">magarantie.sale</field>
        <field name="arch" type="xml">
            <search>
                <field name="idvente"/>
                <field name="nom"/>
                <field name="prenom"/>
                <field name="email"/>
                <field name="sale_order_id"/>
                <filter string="Draft" name="filter_draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="filter_confirmed"
                        domain="[('state', '=', 'confirmed')]"/>
                <filter string="Error" name="filter_error"
                        domain="[('state', '=', 'error')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="groupby_state"
                            context="{'group_by': 'state'}"/>
                    <filter string="Sale Order" name="groupby_order"
                            context="{'group_by': 'sale_order_id'}"/>
                    <filter string="Rubrique" name="groupby_rubrique"
                            context="{'group_by': 'rubrique'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_magarantie_sale" model="ir.actions.act_window">
        <field name="name">Warranty Sales</field>
        <field name="res_model">magarantie.sale</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

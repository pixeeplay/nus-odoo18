<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_magarantie" model="ir.ui.view">
        <field name="name">product.template.form.magarantie</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <!-- Smart button in button box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button"
                        name="action_view_magarantie_warranties"
                        type="object"
                        icon="fa-shield"
                        invisible="not magarantie_eligible">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="magarantie_warranty_count"/>
                        </span>
                        <span class="o_stat_text">Garanties</span>
                    </div>
                </button>
            </xpath>

            <!-- MaGarantie category field in general info -->
            <xpath expr="//field[@name='sale_ok']" position="before">
                <field name="magarantie_category_id"
                       placeholder="Catégorie MaGarantie"/>
                <field name="magarantie_eligible" invisible="1"/>
            </xpath>

            <!-- MaGarantie tab in notebook with full warranty widget -->
            <xpath expr="//notebook" position="inside">
                <page string="MaGarantie" name="magarantie_warranties">

                    <!-- Message when no category selected -->
                    <div class="alert alert-info"
                         role="alert"
                         invisible="magarantie_category_id">
                        Sélectionnez une catégorie MaGarantie ci-dessus pour voir les
                        extensions de garantie disponibles pour ce produit.
                    </div>

                    <!-- Main content when category is selected -->
                    <div invisible="not magarantie_category_id">

                        <!-- Recommended warranty banner -->
                        <div class="alert alert-success d-flex align-items-center"
                             role="alert"
                             invisible="not magarantie_eligible">
                            <i class="fa fa-check-circle fa-2x me-3"/>
                            <div>
                                <strong>Garantie recommandée :</strong>
                                <field name="magarantie_best_warranty_id" readonly="1" class="fw-bold"/>
                                -
                                <strong><field name="magarantie_best_price" readonly="1" widget="monetary"/> EUR</strong>
                            </div>
                        </div>

                        <!-- No warranty available message -->
                        <div class="alert alert-warning"
                             role="alert"
                             invisible="magarantie_eligible">
                            Aucune garantie disponible pour ce produit au prix actuel.
                            Vérifiez la catégorie et le prix de vente, ou synchronisez les garanties.
                        </div>

                        <!-- Configuration + actions -->
                        <group>
                            <group string="Configuration">
                                <field name="magarantie_category_id"/>
                                <field name="magarantie_rubrique" readonly="1"/>
                                <field name="list_price" string="Prix du produit" readonly="1"/>
                                <field name="magarantie_warranty_count" readonly="1"
                                       string="Garanties disponibles"/>
                            </group>
                            <group string="Actions">
                                <div>
                                    <button name="action_sync_magarantie_warranties"
                                            string="Synchroniser les garanties"
                                            type="object"
                                            class="btn-primary mb-2"
                                            icon="fa-refresh"/>
                                </div>
                                <div>
                                    <button name="action_view_magarantie_warranties"
                                            string="Voir les garanties"
                                            type="object"
                                            class="btn-secondary"
                                            icon="fa-list"
                                            invisible="not magarantie_eligible"/>
                                </div>
                            </group>
                        </group>

                        <!-- Inline list of matching warranties with prices -->
                        <separator string="Garanties disponibles pour ce produit"
                                   invisible="not magarantie_eligible"/>
                        <field name="magarantie_warranty_ids"
                               invisible="not magarantie_eligible"
                               readonly="1"
                               nolabel="1">
                            <list create="false" delete="false" edit="false"
                                  decoration-success="True">
                                <field name="idgarantie" string="ID"/>
                                <field name="libelle" string="Garantie"/>
                                <field name="type_garantie" string="Type"/>
                                <field name="programme" string="Programme"/>
                                <field name="duree" string="Durée" optional="show"/>
                                <field name="min_tranche" string="Prix min produit"/>
                                <field name="max_tranche" string="Prix max produit"/>
                                <field name="prix" string="Prix garantie (EUR)"
                                       decoration-bf="True"/>
                            </list>
                        </field>

                    </div>
                </page>
            </xpath>

        </field>
    </record>
</odoo>

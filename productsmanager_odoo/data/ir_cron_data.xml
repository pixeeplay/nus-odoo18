<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Sync prices and stock every 6 hours -->
        <record id="ir_cron_pm_sync_prices" model="ir.cron">
            <field name="name">Products Manager: Sync Prices &amp; Stock</field>
            <field name="model_id" ref="model_pm_config"/>
            <field name="state">code</field>
            <field name="code">model._cron_sync_products()</field>
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>
            <field name="active">True</field>
        </record>

        <!-- Clean old logs daily -->
        <record id="ir_cron_pm_clean_logs" model="ir.cron">
            <field name="name">Products Manager: Clean Old Logs</field>
            <field name="model_id" ref="model_pm_config"/>
            <field name="state">code</field>
            <field name="code">model._cron_clean_logs()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>

    </data>
</odoo>

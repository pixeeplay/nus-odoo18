<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Extend product.product form to show PM fields -->
    <record id="product_product_view_form_pm" model="ir.ui.view">
        <field name="name">product.product.form.pm</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase']" position="after">
                <page string="Products Manager" name="products_manager"
                      invisible="not pm_external_id">
                    <group>
                        <group string="PM Info">
                            <field name="pm_external_id" readonly="True"/>
                            <field name="pm_brand"/>
                            <field name="pm_completeness" widget="progressbar"/>
                            <field name="pm_last_sync"/>
                        </group>
                    </group>
                    <group string="Supplier Prices (from PM)">
                        <field name="pm_supplier_prices_html" nolabel="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Extend product.product list to show PM badge -->
    <record id="product_product_view_list_pm" model="ir.ui.view">
        <field name="name">product.product.list.pm</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="pm_external_id" optional="hide"/>
                <field name="pm_brand" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Search filter for PM products -->
    <record id="product_product_view_search_pm" model="ir.ui.view">
        <field name="name">product.product.search.pm</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[1]" position="before">
                <filter name="pm_imported" string="From Products Manager"
                        domain="[('pm_external_id', '!=', False)]"/>
                <separator/>
            </xpath>
        </field>
    </record>

</odoo>

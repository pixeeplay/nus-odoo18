<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Dedicated PM product form (standalone, no inheritance conflict) -->
    <record id="pm_product_view_form" model="ir.ui.view">
        <field name="name">product.product.form.pm.dedicated</field>
        <field name="model">product.product</field>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <form string="Product (PM)">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="True"/></h1>
                    </div>
                    <group>
                        <group string="General">
                            <field name="default_code"/>
                            <field name="barcode"/>
                            <field name="list_price"/>
                            <field name="standard_price"/>
                            <field name="categ_id"/>
                        </group>
                        <group string="Products Manager">
                            <field name="pm_external_id" readonly="True"/>
                            <field name="pm_brand"/>
                            <field name="pm_completeness" widget="progressbar"/>
                            <field name="pm_last_sync"/>
                        </group>
                    </group>
                    <group string="Supplier Prices">
                        <field name="pm_supplier_prices_html" nolabel="True"/>
                    </group>
                    <notebook>
                        <page string="Suppliers" name="suppliers">
                            <field name="seller_ids">
                                <list editable="bottom">
                                    <field name="partner_id"/>
                                    <field name="price"/>
                                    <field name="min_qty"/>
                                    <field name="delay"/>
                                    <field name="pm_supplier_stock"/>
                                    <field name="pm_is_best"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- PM Imported Products list view -->
    <record id="pm_product_view_list" model="ir.ui.view">
        <field name="name">product.product.list.pm</field>
        <field name="model">product.product</field>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <list string="Imported Products">
                <field name="name"/>
                <field name="default_code"/>
                <field name="barcode"/>
                <field name="pm_brand"/>
                <field name="standard_price" widget="monetary"/>
                <field name="pm_external_id"/>
                <field name="pm_last_sync"/>
            </list>
        </field>
    </record>

    <!-- Search filter for PM products -->
    <record id="pm_product_view_search" model="ir.ui.view">
        <field name="name">product.product.search.pm</field>
        <field name="model">product.product</field>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <search string="PM Products">
                <field name="name"/>
                <field name="default_code"/>
                <field name="barcode"/>
                <field name="pm_brand"/>
                <filter name="pm_imported" string="From Products Manager"
                        domain="[('pm_external_id', '!=', False)]"/>
            </search>
        </field>
    </record>

</odoo>

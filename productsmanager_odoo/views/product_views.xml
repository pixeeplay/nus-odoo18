<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Dedicated PM product form (standalone, no inheritance conflict) -->
    <record id="pm_product_view_form" model="ir.ui.view">
        <field name="name">product.product.form.pm.dedicated</field>
        <field name="model">product.product</field>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <form string="Product (PM)">
                <header>
                    <button name="action_update_pm_prices"
                            string="Update Prices &amp; Stock"
                            type="object"
                            class="btn-primary"
                            icon="fa-refresh"
                            invisible="not pm_external_id"/>
                    <button name="action_fetch_full_pm_data"
                            string="Fetch Full PM Data"
                            type="object"
                            class="btn-secondary"
                            icon="fa-cloud-download"
                            invisible="not pm_external_id"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="True"/></h1>
                    </div>
                    <group>
                        <group string="General">
                            <field name="default_code"/>
                            <field name="barcode"/>
                            <field name="list_price"/>
                            <field name="standard_price"/>
                            <field name="categ_id"/>
                        </group>
                        <group string="Products Manager">
                            <field name="pm_external_id" readonly="True"/>
                            <field name="pm_brand"/>
                            <field name="pm_completeness" widget="progressbar"/>
                            <field name="pm_last_sync"/>
                            <field name="pm_last_full_fetch"/>
                        </group>
                    </group>
                    <group string="Supplier Prices">
                        <field name="pm_supplier_prices_html" nolabel="True"/>
                    </group>
                    <notebook>
                        <page string="Suppliers" name="suppliers">
                            <field name="seller_ids">
                                <list editable="bottom">
                                    <field name="partner_id"/>
                                    <field name="price"/>
                                    <field name="min_qty"/>
                                    <field name="delay"/>
                                    <field name="pm_supplier_stock"/>
                                    <field name="pm_is_best"/>
                                </list>
                            </field>
                        </page>
                        <page string="PM Full Info" name="pm_full_info"
                              invisible="not pm_external_id">
                            <group string="Identity">
                                <group>
                                    <field name="pm_ean"/>
                                    <field name="pm_asin"/>
                                    <field name="pm_upc"/>
                                    <field name="pm_gtin"/>
                                </group>
                                <group>
                                    <field name="pm_manufacturer"/>
                                    <field name="pm_manufacturer_ref"/>
                                    <field name="pm_category_name"/>
                                    <field name="pm_status"/>
                                    <field name="pm_is_active_pm"/>
                                </group>
                            </group>
                            <group string="Pricing">
                                <group>
                                    <field name="pm_cost_price"/>
                                    <field name="pm_recommended_price"/>
                                    <field name="pm_margin"/>
                                </group>
                            </group>
                            <group string="Competitor Prices">
                                <field name="pm_competitor_prices_html" nolabel="True" colspan="2"/>
                            </group>
                            <group string="Stock &amp; Availability">
                                <group>
                                    <field name="pm_stock_quantity"/>
                                    <field name="pm_is_low_stock"/>
                                    <field name="pm_min_order_qty"/>
                                    <field name="pm_max_order_qty"/>
                                </group>
                                <group>
                                    <field name="pm_lead_time_days"/>
                                    <field name="pm_availability_date"/>
                                </group>
                            </group>
                            <group string="Compliance">
                                <group>
                                    <field name="pm_hs_code"/>
                                    <field name="pm_country_of_origin"/>
                                    <field name="pm_weee_category"/>
                                </group>
                                <group>
                                    <field name="pm_reach_compliant"/>
                                    <field name="pm_rohs_compliant"/>
                                    <field name="pm_ce_marked"/>
                                </group>
                            </group>
                            <group string="Environmental">
                                <group>
                                    <field name="pm_energy_class"/>
                                    <field name="pm_power_consumption"/>
                                    <field name="pm_carbon_footprint"/>
                                </group>
                                <group>
                                    <field name="pm_recyclable"/>
                                    <field name="pm_eco_friendly"/>
                                </group>
                            </group>
                            <group string="Dimensions &amp; Weight">
                                <group>
                                    <field name="pm_weight"/>
                                    <field name="pm_width"/>
                                    <field name="pm_height"/>
                                    <field name="pm_depth"/>
                                </group>
                                <group>
                                    <field name="pm_package_length"/>
                                    <field name="pm_package_width"/>
                                    <field name="pm_package_height"/>
                                    <field name="pm_package_weight"/>
                                </group>
                            </group>
                            <group string="Descriptions">
                                <field name="pm_short_description" nolabel="True" colspan="2"/>
                                <field name="pm_description" nolabel="True" colspan="2"/>
                            </group>
                            <group string="Technical Specifications">
                                <field name="pm_technical_specs_html" nolabel="True" colspan="2"/>
                            </group>
                            <group string="AI Enrichment">
                                <group>
                                    <field name="pm_ai_category"/>
                                    <field name="pm_ai_quality_score" widget="progressbar"/>
                                    <field name="pm_ai_seo_title"/>
                                </group>
                                <group>
                                    <field name="pm_ai_seo_meta"/>
                                </group>
                                <field name="pm_ai_short_desc" nolabel="True" colspan="2"/>
                                <field name="pm_ai_long_desc" nolabel="True" colspan="2"/>
                            </group>
                            <group string="Images">
                                <group>
                                    <field name="pm_image_main" widget="image" class="oe_avatar"/>
                                </group>
                                <group>
                                    <field name="pm_image_2" widget="image" class="oe_avatar"/>
                                    <field name="pm_image_3" widget="image" class="oe_avatar"/>
                                </group>
                            </group>
                            <group string="Lifecycle &amp; Analytics">
                                <group>
                                    <field name="pm_lifecycle_status"/>
                                    <field name="pm_discontinued"/>
                                    <field name="pm_end_of_life_date"/>
                                </group>
                                <group>
                                    <field name="pm_popularity_score"/>
                                    <field name="pm_sales_count"/>
                                    <field name="pm_view_count"/>
                                </group>
                            </group>
                            <group string="Categories">
                                <group>
                                    <field name="pm_google_category"/>
                                    <field name="pm_amazon_category"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Inherit standard product.template form: smart button + header button -->
    <!-- We inherit the template form (not product.product form) to avoid
         validation errors with product.product_normal_form_view which
         embeds template-only actions from installed modules. -->
    <record id="pm_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.pm.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Smart button: open dedicated PM form -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_open_pm_form" type="object"
                        class="oe_stat_button" icon="fa-cube"
                        invisible="not pm_has_pm_data">
                    <span class="o_stat_text">Products Manager</span>
                </button>
            </xpath>
            <!-- Update Prices button in header -->
            <xpath expr="//form/header" position="inside">
                <button name="action_update_pm_prices_tmpl"
                        string="Update PM Prices"
                        type="object"
                        class="btn-primary"
                        icon="fa-refresh"
                        invisible="not pm_has_pm_data"/>
            </xpath>
        </field>
    </record>

    <!-- PM Imported Products list view -->
    <record id="pm_product_view_list" model="ir.ui.view">
        <field name="name">product.product.list.pm</field>
        <field name="model">product.product</field>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <list string="Imported Products">
                <field name="name"/>
                <field name="default_code"/>
                <field name="barcode"/>
                <field name="pm_brand"/>
                <field name="standard_price" widget="monetary"/>
                <field name="pm_external_id"/>
                <field name="pm_last_sync"/>
            </list>
        </field>
    </record>

    <!-- Search filter for PM products -->
    <record id="pm_product_view_search" model="ir.ui.view">
        <field name="name">product.product.search.pm</field>
        <field name="model">product.product</field>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <search string="PM Products">
                <field name="name"/>
                <field name="default_code"/>
                <field name="barcode"/>
                <field name="pm_brand"/>
                <filter name="pm_imported" string="From Products Manager"
                        domain="[('pm_external_id', '!=', False)]"/>
            </search>
        </field>
    </record>

</odoo>

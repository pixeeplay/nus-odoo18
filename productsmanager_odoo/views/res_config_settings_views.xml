<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_pm" model="ir.ui.view">
        <field name="name">res.config.settings.form.pm</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Products Manager" string="Products Manager"
                     groups="base.group_system">
                    <block title="Synchronization" name="pm_sync_settings">
                        <setting string="Automatic Synchronization"
                                 help="Automatically sync prices and stock from Products Manager API.">
                            <field name="pm_auto_sync"/>
                            <div invisible="not pm_auto_sync" class="mt-2">
                                <label for="pm_sync_interval"/>
                                <field name="pm_sync_interval" class="d-inline"/>
                                <span> hours</span>
                            </div>
                        </setting>
                    </block>
                    <block title="Configuration" name="pm_config_settings">
                        <setting string="Active Configuration"
                                 help="Select the Products Manager API configuration to use.">
                            <field name="pm_config_id"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>

</odoo>

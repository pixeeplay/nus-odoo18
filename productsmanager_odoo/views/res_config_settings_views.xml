<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_pm" model="ir.ui.view">
        <field name="name">res.config.settings.form.pm</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Products Manager"
                     data-key="productsmanager_odoo"
                     groups="base.group_system">
                    <h2>Products Manager</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="pm_auto_sync"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="pm_auto_sync"/>
                                <div class="text-muted">
                                    Automatically sync prices and stock from Products Manager
                                </div>
                                <div invisible="not pm_auto_sync">
                                    <label for="pm_sync_interval"/>
                                    <field name="pm_sync_interval" class="o_light_label"/>
                                    <span> hours</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="pm_config_id"/>
                                <div class="text-muted">
                                    Active Products Manager configuration
                                </div>
                                <field name="pm_config_id"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Default Helpdesk Stages -->
        <record id="stage_new" model="ollama.helpdesk.stage">
            <field name="name">New</field>
            <field name="sequence">1</field>
            <field name="fold">False</field>
            <field name="is_closing">False</field>
        </record>

        <record id="stage_in_progress" model="ollama.helpdesk.stage">
            <field name="name">In Progress</field>
            <field name="sequence">2</field>
            <field name="fold">False</field>
            <field name="is_closing">False</field>
        </record>

        <record id="stage_waiting" model="ollama.helpdesk.stage">
            <field name="name">Waiting</field>
            <field name="sequence">3</field>
            <field name="fold">False</field>
            <field name="is_closing">False</field>
        </record>

        <record id="stage_resolved" model="ollama.helpdesk.stage">
            <field name="name">Resolved</field>
            <field name="sequence">4</field>
            <field name="fold">True</field>
            <field name="is_closing">True</field>
        </record>

        <record id="stage_closed" model="ollama.helpdesk.stage">
            <field name="name">Closed</field>
            <field name="sequence">5</field>
            <field name="fold">True</field>
            <field name="is_closing">True</field>
        </record>

    </data>
</odoo>

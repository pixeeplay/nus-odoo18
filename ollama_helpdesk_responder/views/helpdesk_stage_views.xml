<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Stage List View -->
    <record id="ollama_helpdesk_stage_list" model="ir.ui.view">
        <field name="name">ollama.helpdesk.stage.list</field>
        <field name="model">ollama.helpdesk.stage</field>
        <field name="arch" type="xml">
            <list string="Ticket Stages" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="fold"/>
                <field name="is_closing"/>
            </list>
        </field>
    </record>

    <!-- Stage Form View -->
    <record id="ollama_helpdesk_stage_form" model="ir.ui.view">
        <field name="name">ollama.helpdesk.stage.form</field>
        <field name="model">ollama.helpdesk.stage</field>
        <field name="arch" type="xml">
            <form string="Ticket Stage">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="fold"/>
                            <field name="is_closing"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Stage Action -->
    <record id="action_helpdesk_stage" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">ollama.helpdesk.stage</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new ticket stage
            </p>
            <p>
                Define the stages of your helpdesk workflow (e.g. New, In Progress, Resolved, Closed).
            </p>
        </field>
    </record>

    <!-- Configuration Menu -->
    <menuitem id="menu_helpdesk_config"
              name="Configuration"
              parent="menu_helpdesk_root"
              sequence="90"/>

    <menuitem id="menu_helpdesk_stages"
              name="Stages"
              parent="menu_helpdesk_config"
              action="action_helpdesk_stage"
              sequence="10"/>

</odoo>

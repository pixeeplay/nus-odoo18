<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cleanup old AI logs every day at 3:00 AM -->
        <record id="ir_cron_cleanup_ollama_logs" model="ir.cron">
            <field name="name">Ollama AI: Cleanup Old Logs</field>
            <field name="model_id" ref="model_ollama_log"/>
            <field name="state">code</field>
            <field name="code">model._gc_old_logs()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>

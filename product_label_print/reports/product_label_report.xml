<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_product_label" model="report.paperformat">
        <field name="name">Product Label (A4 - 2 per page)</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">96</field>
    </record>
    <record id="action_report_product_label" model="ir.actions.report">
        <field name="name">Product Labels</field>
        <field name="model">product.template</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">product_label_print.report_product_labels</field>
        <field name="report_file">product_label_print.report_product_labels</field>
        <field name="paperformat_id" ref="paperformat_product_label"/>
        <field name="binding_type">report</field>
    </record>
</odoo>

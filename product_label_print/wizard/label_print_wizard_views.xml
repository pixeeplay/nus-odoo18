<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_label_print_wizard_form" model="ir.ui.view">
        <field name="name">product.label.print.wizard.form</field>
        <field name="model">product.label.print.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Product Labels">
                <group>
                    <group string="Products">
                        <field name="product_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="product_count" readonly="1"/>
                    </group>
                    <group string="Print Settings">
                        <field name="quantity"/>
                        <field name="print_mode"/>
                        <field name="max_bullets"/>
                    </group>
                </group>
                <separator string="Display Options"/>
                <group col="4">
                    <field name="show_promo" widget="boolean_toggle"/>
                    <field name="show_energy_label" widget="boolean_toggle"/>
                    <field name="show_repairability" widget="boolean_toggle"/>
                    <field name="show_deee" widget="boolean_toggle"/>
                </group>
                <div class="alert alert-info" role="alert">
                    <strong>Summary: </strong>
                    <field name="total_labels" readonly="1" class="d-inline"/> labels on
                    <field name="total_pages" readonly="1" class="d-inline"/> A4 page(s)
                    (2 labels per page).
                </div>
                <footer>
                    <button name="action_print" type="object" string="Print Labels" class="btn-primary" icon="fa-print"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_server_print_product_labels" model="ir.actions.server">
        <field name="name">Print Labels</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.action_print_label()
        </field>
    </record>
</odoo>

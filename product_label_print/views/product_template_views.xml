<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_label_fields" model="ir.ui.view">
        <field name="name">product.template.form.label.fields</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Label / Price Tag" name="label_info">
                    <group>
                        <group string="Energy &amp; Environment">
                            <field name="energy_label"/>
                            <field name="repairability_index"/>
                            <field name="deee_amount" readonly="0"/>
                        </group>
                        <group string="Promotional Pricing">
                            <field name="promo_active" widget="boolean_toggle"/>
                            <field name="promo_price" invisible="not promo_active"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_print_label"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-tag">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Print Label</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
    <record id="product_template_tree_label_fields" model="ir.ui.view">
        <field name="name">product.template.tree.label.fields</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="list_price" position="after">
                <field name="energy_label" optional="hide"/>
                <field name="repairability_index" optional="hide"/>
                <field name="promo_price" optional="hide"/>
                <field name="promo_active" optional="hide" widget="boolean_toggle"/>
            </field>
        </field>
    </record>
    <record id="action_product_label_products" model="ir.actions.act_window">
        <field name="name">Products - Labels</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Select products and print shelf labels
            </p>
        </field>
    </record>
    <menuitem id="menu_product_label_root"
              name="Labels"
              web_icon="product_label_print,static/description/icon.png"
              sequence="25"/>
    <menuitem id="menu_product_label_products"
              name="Products"
              parent="menu_product_label_root"
              action="action_product_label_products"
              sequence="10"/>
</odoo>

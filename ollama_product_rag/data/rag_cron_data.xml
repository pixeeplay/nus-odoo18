<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Nightly cron: reindex modified products -->
        <record id="ir_cron_rag_reindex" model="ir.cron">
            <field name="name">RAG: Reindex Product Catalog</field>
            <field name="model_id" ref="model_product_rag_index"/>
            <field name="state">code</field>
            <field name="code">model.reindex_catalog()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="False"/>
        </record>

    </data>
</odoo>

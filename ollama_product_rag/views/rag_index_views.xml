<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================ -->
    <!-- Index List View                                              -->
    <!-- ============================================================ -->
    <record id="product_rag_index_list_view" model="ir.ui.view">
        <field name="name">product.rag.index.list</field>
        <field name="model">product.rag.index</field>
        <field name="arch" type="xml">
            <list string="Product RAG Index" default_order="last_indexed desc">
                <field name="product_id"/>
                <field name="last_indexed"/>
                <field name="indexed_text" optional="hide"/>
                <button name="action_index_product" type="object"
                        string="Re-index" icon="fa-refresh"
                        class="btn-link"/>
            </list>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Index Form View                                              -->
    <!-- ============================================================ -->
    <record id="product_rag_index_form_view" model="ir.ui.view">
        <field name="name">product.rag.index.form</field>
        <field name="model">product.rag.index</field>
        <field name="arch" type="xml">
            <form string="Product RAG Index">
                <header>
                    <button name="action_index_product" type="object"
                            string="Index Now" class="btn-primary"
                            style="background-color: #3F51B5; border-color: #3F51B5;"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="last_indexed"/>
                        </group>
                    </group>
                    <group string="Indexed Content">
                        <field name="indexed_text" nolabel="1" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Index Search View                                            -->
    <!-- ============================================================ -->
    <record id="product_rag_index_search_view" model="ir.ui.view">
        <field name="name">product.rag.index.search</field>
        <field name="model">product.rag.index</field>
        <field name="arch" type="xml">
            <search string="Search Product Index">
                <field name="product_id"/>
                <field name="indexed_text"/>
                <filter name="indexed" string="Indexed"
                        domain="[('last_indexed', '!=', False)]"/>
                <filter name="not_indexed" string="Not Indexed"
                        domain="[('last_indexed', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_product" string="Product"
                            context="{'group_by': 'product_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Action                                                       -->
    <!-- ============================================================ -->
    <record id="action_rag_index" model="ir.actions.act_window">
        <field name="name">Product Index</field>
        <field name="res_model">product.rag.index</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="product_rag_index_search_view"/>
    </record>

    <!-- ============================================================ -->
    <!-- Menu                                                         -->
    <!-- ============================================================ -->
    <menuitem id="menu_rag_index"
              name="Product Index"
              parent="menu_rag_data"
              action="action_rag_index"
              sequence="5"/>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_prestashop_import_wizard_form" model="ir.ui.view">
        <field name="name">prestashop.import.wizard.form</field>
        <field name="model">prestashop.import.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="preview_ids" widget="many2many_tags" readonly="1"/>
                    <field name="import_count" readonly="1"/>
                </group>
                <footer>
                    <button name="action_import_selected" string="Import Orders"
                            type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

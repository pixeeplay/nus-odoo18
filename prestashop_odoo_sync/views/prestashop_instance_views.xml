<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_prestashop_instance_tree" model="ir.ui.view">
        <field name="name">prestashop.instance.tree</field>
        <field name="model">prestashop.instance</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="url"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    <record id="view_prestashop_instance_form" model="ir.ui.view">
        <field name="name">prestashop.instance.form</field>
        <field name="model">prestashop.instance</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_test_connection" string="Test Connection" type="object" class="btn-primary"/>
                    <button name="action_check_permissions" string="Check API Permissions" type="object" class="btn-warning" invisible="not id"/>
                    <button name="action_sync_orders" string="Sync Orders" type="object" class="btn-success" invisible="not id"/>
                    <button name="action_delete_all_orders" string="Delete Draft Orders" type="object" class="btn-danger" invisible="not id" confirm="This will delete ALL draft PrestaShop orders for this instance. Are you sure?"/>
                    <button name="action_update_cron_interval" string="Apply Sync Interval" type="object" class="btn-secondary" invisible="not id"/>
                </header>
                <sheet>
                    <group>
                        <group string="PrestaShop API">
                            <field name="name"/>
                            <field name="url"/>
                            <field name="api_key" password="True"/>
                        </group>
                        <group string="Odoo Configuration">
                            <field name="warehouse_id"/>
                            <field name="company_id"/>
                            <field name="active"/>
                            <field name="last_sync_date"/>
                            <field name="sync_interval" string="Auto-Sync (min)"/>
                            <field name="order_limit" string="Orders to Fetch"/>
                            <field name="order_count" string="Imported Orders"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="orders" string="Synchronized Orders">
                            <field name="order_ids" readonly="1">
                                <list create="false" edit="false" default_order="date_order desc">
                                    <field name="prestashop_order_id" string="ID"/>
                                    <field name="prestashop_reference" string="Reference"/>
                                    <field name="prestashop_new_customer" string="New"/>
                                    <field name="prestashop_delivery_country" string="Delivery"/>
                                    <field name="partner_id" string="Client"/>
                                    <field name="amount_total" string="Total"/>
                                    <field name="prestashop_total_ecotax" string="Eco-Tax"/>
                                    <field name="prestashop_payment" string="Payment"/>
                                    <field name="prestashop_status" string="PS Status"/>
                                    <field name="prestashop_carrier" string="Carrier"/>
                                    <field name="state" string="Odoo Status"/>
                                    <field name="date_order" string="Date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_prestashop_orders_tree" model="ir.ui.view">
        <field name="name">prestashop.orders.tree</field>
        <field name="model">sale.order</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <list default_order="date_order desc" decoration-danger="prestashop_status in ('Annulé', 'Erreur de paiement')" decoration-success="prestashop_status in ('Livré', 'Expédié')" decoration-info="prestashop_status in ('En cours de préparation', 'En Cours de Traitement')" decoration-warning="prestashop_status in ('En attente de virement bancaire', 'En attente de réapprovisionnement (payé)', 'En attente PRISE RDV Livraison IDF')" decoration-bf="state == 'draft'">
                <field name="prestashop_order_id" string="ID"/>
                <field name="prestashop_reference" string="Reference"/>
                <field name="prestashop_new_customer" string="New" widget="boolean"/>
                <field name="prestashop_delivery_country" string="Delivery"/>
                <field name="partner_id" string="Client"/>
                <field name="amount_total" string="Total" widget="monetary"/>
                <field name="prestashop_total_ecotax" string="Eco-Tax" optional="hide"/>
                <field name="prestashop_payment" string="Payment"/>
                <field name="prestashop_status" string="Status"/>
                <field name="prestashop_carrier" string="Carrier" optional="hide"/>
                <field name="date_order" string="Date"/>
            </list>
        </field>
    </record>
    <record id="view_sale_order_form_prestashop" model="ir.ui.view">
        <field name="name">sale.order.form.prestashop</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="prestashop_source" invisible="1"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="prestashop_info" string="PrestaShop" invisible="not prestashop_source">
                    <group>
                        <group string="PrestaShop Details">
                            <field name="prestashop_order_id" readonly="1"/>
                            <field name="prestashop_reference" readonly="1"/>
                            <field name="prestashop_status" readonly="1"/>
                            <field name="prestashop_payment" readonly="1"/>
                            <field name="prestashop_carrier" readonly="1"/>
                            <field name="prestashop_new_customer" readonly="1"/>
                            <field name="prestashop_delivery_country" readonly="1"/>
                            <field name="prestashop_instance_id" readonly="1"/>
                        </group>
                        <group string="Eco-Tax">
                            <field name="prestashop_total_ecotax" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="view_sale_order_line_prestashop" model="ir.ui.view">
        <field name="name">sale.order.line.form.prestashop</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//list//field[@name='price_subtotal']" position="before">
                <field name="prestashop_ecotax" string="Eco-Tax" optional="hide"/>
            </xpath>
        </field>
    </record>
    <record id="action_prestashop_instance" model="ir.actions.act_window">
        <field name="name">PrestaShop Instances</field>
        <field name="res_model">prestashop.instance</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="action_prestashop_orders" model="ir.actions.act_window">
        <field name="name">PrestaShop Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('prestashop_source', '=', 'prestashop')]</field>
    </record>
    <record id="action_prestashop_orders_tree" model="ir.actions.act_window.view">
        <field name="sequence">1</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_prestashop_orders_tree"/>
        <field name="act_window_id" ref="action_prestashop_orders"/>
    </record>
    <menuitem id="menu_prestashop_root" name="PrestaShop" sequence="10"/>
    <menuitem id="menu_prestashop_instances" name="Instances" parent="menu_prestashop_root" action="action_prestashop_instance" sequence="10"/>
    <menuitem id="menu_prestashop_orders" name="Orders" parent="menu_prestashop_root" action="action_prestashop_orders" sequence="20"/>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_prestashop_order_preview_tree" model="ir.ui.view">
        <field name="name">prestashop.order.preview.tree</field>
        <field name="model">prestashop.order.preview</field>
        <field name="arch" type="xml">
            <list create="false" edit="false" multi_edit="1">
                <field name="prestashop_order_date" string="Date"/>
                <field name="name" string="Reference"/>
                <field name="customer_name"/>
                <field name="customer_email"/>
                <field name="total_amount" sum="Total"/>
                <field name="payment_method"/>
                <field name="order_state" string="PS Status"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'pending'"
                       decoration-success="state == 'imported'"
                       decoration-danger="state == 'error'"
                       decoration-muted="state == 'skipped'"/>
                <field name="instance_id" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_prestashop_order_preview_form" model="ir.ui.view">
        <field name="name">prestashop.order.preview.form</field>
        <field name="model">prestashop.order.preview</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <header>
                    <button name="action_import_order" string="Import This Order"
                            type="object" class="btn-primary"
                            invisible="state != 'pending'"/>
                    <button name="action_skip_order" string="Skip"
                            type="object" class="btn-secondary"
                            invisible="state != 'pending'"/>
                    <button name="action_view_imported_order" string="View Imported Order"
                            type="object" class="btn-info"
                            invisible="state != 'imported'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="pending,imported"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Order Information">
                            <field name="instance_id"/>
                            <field name="prestashop_order_id"/>
                            <field name="prestashop_order_date"/>
                            <field name="order_state"/>
                            <field name="payment_method"/>
                        </group>
                        <group string="Customer">
                            <field name="customer_name"/>
                            <field name="customer_email"/>
                            <field name="prestashop_customer_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Amounts">
                            <field name="total_amount"/>
                        </group>
                        <group string="Import Status">
                            <field name="imported_order_id" invisible="not imported_order_id"/>
                            <field name="import_date" invisible="not import_date"/>
                            <field name="error_message" invisible="not error_message"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="lines" string="Order Lines">
                            <field name="line_ids">
                                <list create="false" edit="false">
                                    <field name="product_name"/>
                                    <field name="product_reference"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="total_price" sum="Total"/>
                                </list>
                            </field>
                        </page>
                        <page name="raw_data" string="Raw XML Data">
                            <field name="raw_data" widget="ace"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_prestashop_order_preview_search" model="ir.ui.view">
        <field name="name">prestashop.order.preview.search</field>
        <field name="model">prestashop.order.preview</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="customer_name"/>
                <field name="customer_email"/>
                <field name="prestashop_order_id"/>
                <separator/>
                <filter name="pending" string="Pending" domain="[('state', '=', 'pending')]"/>
                <filter name="imported" string="Imported" domain="[('state', '=', 'imported')]"/>
                <filter name="error" string="Errors" domain="[('state', '=', 'error')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_instance" string="Instance" context="{'group_by': 'instance_id'}"/>
                    <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_date" string="Order Date" context="{'group_by': 'prestashop_order_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_prestashop_order_preview" model="ir.actions.act_window">
        <field name="name">Order Preview</field>
        <field name="res_model">prestashop.order.preview</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No PrestaShop orders to preview yet!
            </p>
            <p>
                Click "Fetch Orders to Preview" button on your PrestaShop Instance to load orders.
            </p>
        </field>
    </record>

    <!-- Action for batch import (launched from tree view) -->
    <record id="action_import_selected_orders" model="ir.actions.server">
        <field name="name">Import Selected Orders</field>
        <field name="model_id" ref="model_prestashop_order_preview"/>
        <field name="binding_model_id" ref="model_prestashop_order_preview"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = {
        'type': 'ir.actions.act_window',
        'res_model': 'prestashop.import.wizard',
        'view_mode': 'form',
        'target': 'new',
        'context': {
            'default_preview_ids': [(6, 0, records.ids)],
        }
    }
        </field>
    </record>
</odoo>

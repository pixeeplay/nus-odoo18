<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- =================================================================
         Footer 1: Columns — 4 columns (About, Links, Contact, Newsletter)
         ================================================================= -->
    <record id="nova_footer_columns" model="theme.ir.ui.view">
        <field name="name">Nova Footer: Columns</field>
        <field name="key">theme_nova.nova_footer_columns</field>
        <field name="inherit_id" ref="website.layout"/>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='footer']" position="replace">
                <div id="footer" class="oe_structure oe_structure_solo nova-footer nova-footer-columns"
                     t-ignore="true" t-if="not no_footer">
                    <section class="pt-5 pb-3 o_cc o_cc5" data-snippet="s_text_block" data-name="Nova Footer">
                        <div class="container">
                            <div class="row">
                                <!-- About -->
                                <div class="col-lg-3 col-md-6 mb-4">
                                    <h5 class="fw-bold mb-3">About Us</h5>
                                    <p class="small opacity-75">We are passionate about delivering quality products and
                                    exceptional customer experience. Your satisfaction is our priority.</p>
                                    <div class="nova-footer-social mt-3">
                                        <a href="#" class="me-2"><i class="fa fa-facebook"/></a>
                                        <a href="#" class="me-2"><i class="fa fa-instagram"/></a>
                                        <a href="#" class="me-2"><i class="fa fa-twitter"/></a>
                                        <a href="#"><i class="fa fa-pinterest"/></a>
                                    </div>
                                </div>
                                <!-- Quick Links -->
                                <div class="col-lg-3 col-md-6 mb-4">
                                    <h5 class="fw-bold mb-3">Quick Links</h5>
                                    <ul class="list-unstyled small">
                                        <li class="mb-2"><a href="/shop">Shop</a></li>
                                        <li class="mb-2"><a href="/about-us">About</a></li>
                                        <li class="mb-2"><a href="/contactus">Contact</a></li>
                                        <li class="mb-2"><a href="/faq">FAQ</a></li>
                                    </ul>
                                </div>
                                <!-- Customer Service -->
                                <div class="col-lg-3 col-md-6 mb-4">
                                    <h5 class="fw-bold mb-3">Customer Service</h5>
                                    <ul class="list-unstyled small">
                                        <li class="mb-2"><a href="#">Shipping Policy</a></li>
                                        <li class="mb-2"><a href="#">Returns &amp; Exchanges</a></li>
                                        <li class="mb-2"><a href="#">Privacy Policy</a></li>
                                        <li class="mb-2"><a href="#">Terms of Service</a></li>
                                    </ul>
                                </div>
                                <!-- Newsletter -->
                                <div class="col-lg-3 col-md-6 mb-4">
                                    <h5 class="fw-bold mb-3">Newsletter</h5>
                                    <p class="small opacity-75">Subscribe to get special offers, free giveaways, and
                                    exclusive deals.</p>
                                    <div class="input-group mt-3">
                                        <input type="email" class="form-control form-control-sm"
                                               placeholder="Your email"/>
                                        <button class="btn btn-primary btn-sm" type="button">
                                            <i class="fa fa-paper-plane"/>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- Copyright bar -->
                    <section class="py-3 o_cc o_cc5 border-top" style="border-color: rgba(255,255,255,0.1) !important;"
                             data-snippet="s_text_block" data-name="Copyright">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-md-6 text-center text-md-start">
                                    <small class="opacity-50">
                                        <t t-out="res_company.name"/> © <t t-out="datetime.date.today().year"/>. All rights reserved.
                                    </small>
                                </div>
                                <div class="col-md-6 text-center text-md-end">
                                    <small class="opacity-50">
                                        <i class="fa fa-cc-visa me-1"/>
                                        <i class="fa fa-cc-mastercard me-1"/>
                                        <i class="fa fa-cc-paypal me-1"/>
                                        <i class="fa fa-cc-amex"/>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
        </field>
    </record>

    <!-- =================================================================
         Footer 2: Dark — Dark with gradient + social icons
         ================================================================= -->
    <record id="nova_footer_dark" model="theme.ir.ui.view">
        <field name="name">Nova Footer: Dark</field>
        <field name="key">theme_nova.nova_footer_dark</field>
        <field name="inherit_id" ref="website.layout"/>
        <field name="active" eval="False"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='footer']" position="replace">
                <div id="footer" class="oe_structure oe_structure_solo nova-footer nova-footer-dark"
                     t-ignore="true" t-if="not no_footer">
                    <section class="pt-5 pb-4 o_cc o_cc5" data-snippet="s_text_block" data-name="Nova Dark Footer">
                        <div class="container">
                            <div class="row justify-content-between">
                                <div class="col-lg-4 mb-4">
                                    <h4 class="fw-bold mb-3">Your Store</h4>
                                    <p class="opacity-75">Curated collections, exceptional quality,
                                    delivered with care to your doorstep.</p>
                                    <div class="nova-footer-social mt-3">
                                        <a href="#" class="me-3 fs-5"><i class="fa fa-facebook"/></a>
                                        <a href="#" class="me-3 fs-5"><i class="fa fa-instagram"/></a>
                                        <a href="#" class="me-3 fs-5"><i class="fa fa-twitter"/></a>
                                        <a href="#" class="me-3 fs-5"><i class="fa fa-youtube-play"/></a>
                                    </div>
                                </div>
                                <div class="col-lg-2 col-6 mb-4">
                                    <h6 class="fw-bold mb-3 text-uppercase small">Shop</h6>
                                    <ul class="list-unstyled small">
                                        <li class="mb-2"><a href="/shop" class="opacity-75">All Products</a></li>
                                        <li class="mb-2"><a href="#" class="opacity-75">New Arrivals</a></li>
                                        <li class="mb-2"><a href="#" class="opacity-75">Best Sellers</a></li>
                                        <li class="mb-2"><a href="#" class="opacity-75">Sale</a></li>
                                    </ul>
                                </div>
                                <div class="col-lg-2 col-6 mb-4">
                                    <h6 class="fw-bold mb-3 text-uppercase small">Help</h6>
                                    <ul class="list-unstyled small">
                                        <li class="mb-2"><a href="/contactus" class="opacity-75">Contact</a></li>
                                        <li class="mb-2"><a href="#" class="opacity-75">Shipping</a></li>
                                        <li class="mb-2"><a href="#" class="opacity-75">Returns</a></li>
                                        <li class="mb-2"><a href="#" class="opacity-75">FAQ</a></li>
                                    </ul>
                                </div>
                                <div class="col-lg-3 mb-4">
                                    <h6 class="fw-bold mb-3 text-uppercase small">Contact</h6>
                                    <ul class="list-unstyled small opacity-75">
                                        <li class="mb-2"><i class="fa fa-map-marker me-2"/>123 Commerce St</li>
                                        <li class="mb-2"><i class="fa fa-phone me-2"/>+1 (555) 123-4567</li>
                                        <li class="mb-2"><i class="fa fa-envelope me-2"/>hello@store.com</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="py-3 o_cc o_cc5" data-snippet="s_text_block" data-name="Copyright"
                             style="border-top: 1px solid rgba(255,255,255,0.08);">
                        <div class="container text-center">
                            <small class="opacity-50">
                                <t t-out="res_company.name"/> © <t t-out="datetime.date.today().year"/>
                            </small>
                        </div>
                    </section>
                </div>
            </xpath>
        </field>
    </record>

    <!-- =================================================================
         Footer 3: Minimal — Single line (© + links + social)
         ================================================================= -->
    <record id="nova_footer_minimal" model="theme.ir.ui.view">
        <field name="name">Nova Footer: Minimal</field>
        <field name="key">theme_nova.nova_footer_minimal</field>
        <field name="inherit_id" ref="website.layout"/>
        <field name="active" eval="False"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='footer']" position="replace">
                <div id="footer" class="oe_structure oe_structure_solo nova-footer nova-footer-minimal"
                     t-ignore="true" t-if="not no_footer">
                    <section class="py-4 o_cc o_cc5" data-snippet="s_text_block" data-name="Nova Minimal Footer">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-md-4 text-center text-md-start mb-2 mb-md-0">
                                    <small class="opacity-50">
                                        © <t t-out="datetime.date.today().year"/> <t t-out="res_company.name"/>
                                    </small>
                                </div>
                                <div class="col-md-4 text-center mb-2 mb-md-0">
                                    <a href="/shop" class="mx-2 small">Shop</a>
                                    <a href="/about-us" class="mx-2 small">About</a>
                                    <a href="/contactus" class="mx-2 small">Contact</a>
                                </div>
                                <div class="col-md-4 text-center text-md-end">
                                    <a href="#" class="mx-1"><i class="fa fa-facebook"/></a>
                                    <a href="#" class="mx-1"><i class="fa fa-instagram"/></a>
                                    <a href="#" class="mx-1"><i class="fa fa-twitter"/></a>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
        </field>
    </record>

    <!-- =================================================================
         Footer 4: CTA — Integrated "Sign up" CTA banner
         ================================================================= -->
    <record id="nova_footer_cta" model="theme.ir.ui.view">
        <field name="name">Nova Footer: CTA</field>
        <field name="key">theme_nova.nova_footer_cta</field>
        <field name="inherit_id" ref="website.layout"/>
        <field name="active" eval="False"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='footer']" position="replace">
                <div id="footer" class="oe_structure oe_structure_solo nova-footer nova-footer-cta"
                     t-ignore="true" t-if="not no_footer">
                    <!-- CTA Banner -->
                    <section class="py-5 o_cc o_cc1 nova-footer-cta-banner"
                             data-snippet="s_text_block" data-name="CTA Banner"
                             style="background: linear-gradient(135deg, var(--o-color-1), var(--o-color-5));">
                        <div class="container text-center">
                            <h3 class="text-white fw-bold mb-2">Join Our Community</h3>
                            <p class="text-white opacity-75 mb-4">Get 10% off your first order + exclusive access to new arrivals</p>
                            <div class="row justify-content-center">
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <input type="email" class="form-control"
                                               placeholder="Enter your email address"/>
                                        <button class="btn btn-light fw-bold" type="button">Subscribe</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- Footer links -->
                    <section class="py-4 o_cc o_cc5" data-snippet="s_text_block" data-name="Footer Links">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-md-4 text-center text-md-start mb-2 mb-md-0">
                                    <small class="opacity-50">
                                        © <t t-out="datetime.date.today().year"/> <t t-out="res_company.name"/>
                                    </small>
                                </div>
                                <div class="col-md-4 text-center mb-2 mb-md-0">
                                    <a href="/shop" class="mx-2 small">Shop</a>
                                    <a href="/about-us" class="mx-2 small">About</a>
                                    <a href="/contactus" class="mx-2 small">Contact</a>
                                    <a href="#" class="mx-2 small">Privacy</a>
                                </div>
                                <div class="col-md-4 text-center text-md-end">
                                    <a href="#" class="mx-1"><i class="fa fa-facebook"/></a>
                                    <a href="#" class="mx-1"><i class="fa fa-instagram"/></a>
                                    <a href="#" class="mx-1"><i class="fa fa-twitter"/></a>
                                    <a href="#" class="mx-1"><i class="fa fa-pinterest"/></a>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
        </field>
    </record>

</odoo>

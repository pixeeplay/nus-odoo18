<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="s_nova_pricing" name="Nova Pricing Tables">
        <section class="s_nova_pricing pt-5 pb-5" data-snippet="s_nova_pricing" data-name="Nova Pricing">
            <div class="container">
                <div class="text-center mb-5">
                    <h2 class="fw-bold">Simple, Transparent Pricing</h2>
                    <p class="text-muted mx-auto" style="max-width: 500px;">
                        Choose the plan that fits your needs. No hidden fees.
                    </p>
                </div>
                <div class="row g-4 justify-content-center">
                    <!-- Basic Plan -->
                    <div class="col-lg-4 col-md-6">
                        <div class="nova-pricing-card card h-100 border text-center p-4">
                            <div class="card-body d-flex flex-column">
                                <h5 class="fw-bold text-muted text-uppercase mb-3">Basic</h5>
                                <div class="nova-pricing-amount mb-3">
                                    <span class="nova-pricing-currency">$</span>
                                    <span class="nova-pricing-value display-4 fw-bold">19</span>
                                    <span class="text-muted">/month</span>
                                </div>
                                <ul class="list-unstyled mb-4 flex-grow-1 text-start">
                                    <li class="py-2 border-bottom"><i class="fa fa-check text-success me-2"/>5 Products</li>
                                    <li class="py-2 border-bottom"><i class="fa fa-check text-success me-2"/>Basic Analytics</li>
                                    <li class="py-2 border-bottom"><i class="fa fa-check text-success me-2"/>Email Support</li>
                                    <li class="py-2 text-muted"><i class="fa fa-times me-2"/>Custom Domain</li>
                                </ul>
                                <a href="#" class="btn btn-outline-dark w-100">Get Started</a>
                            </div>
                        </div>
                    </div>
                    <!-- Popular Plan -->
                    <div class="col-lg-4 col-md-6">
                        <div class="nova-pricing-card nova-pricing-featured card h-100 border-0 text-center p-4 shadow">
                            <span class="nova-pricing-badge badge bg-primary position-absolute top-0 start-50 translate-middle px-3 py-2">Most Popular</span>
                            <div class="card-body d-flex flex-column">
                                <h5 class="fw-bold text-uppercase mb-3" style="color: var(--o-color-1);">Professional</h5>
                                <div class="nova-pricing-amount mb-3">
                                    <span class="nova-pricing-currency">$</span>
                                    <span class="nova-pricing-value display-4 fw-bold">49</span>
                                    <span class="text-muted">/month</span>
                                </div>
                                <ul class="list-unstyled mb-4 flex-grow-1 text-start">
                                    <li class="py-2 border-bottom"><i class="fa fa-check text-success me-2"/>50 Products</li>
                                    <li class="py-2 border-bottom"><i class="fa fa-check text-success me-2"/>Advanced Analytics</li>
                                    <li class="py-2 border-bottom"><i class="fa fa-check text-success me-2"/>Priority Support</li>
                                    <li class="py-2 border-bottom"><i class="fa fa-check text-success me-2"/>Custom Domain</li>
                                </ul>
                                <a href="#" class="btn btn-primary w-100">Get Started</a>
                            </div>
                        </div>
                    </div>
                    <!-- Enterprise Plan -->
                    <div class="col-lg-4 col-md-6">
                        <div class="nova-pricing-card card h-100 border text-center p-4">
                            <div class="card-body d-flex flex-column">
                                <h5 class="fw-bold text-muted text-uppercase mb-3">Enterprise</h5>
                                <div class="nova-pricing-amount mb-3">
                                    <span class="nova-pricing-currency">$</span>
                                    <span class="nova-pricing-value display-4 fw-bold">99</span>
                                    <span class="text-muted">/month</span>
                                </div>
                                <ul class="list-unstyled mb-4 flex-grow-1 text-start">
                                    <li class="py-2 border-bottom"><i class="fa fa-check text-success me-2"/>Unlimited Products</li>
                                    <li class="py-2 border-bottom"><i class="fa fa-check text-success me-2"/>Full Analytics Suite</li>
                                    <li class="py-2 border-bottom"><i class="fa fa-check text-success me-2"/>Dedicated Support</li>
                                    <li class="py-2 border-bottom"><i class="fa fa-check text-success me-2"/>Custom Domain</li>
                                </ul>
                                <a href="#" class="btn btn-outline-dark w-100">Contact Sales</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

</odoo>

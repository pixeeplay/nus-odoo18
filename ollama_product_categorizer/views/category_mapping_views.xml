<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Category Mapping: List View -->
    <record id="view_category_mapping_list" model="ir.ui.view">
        <field name="name">product.ai.category.mapping.list</field>
        <field name="model">product.ai.category.mapping</field>
        <field name="arch" type="xml">
            <list string="AI Category Mappings" editable="bottom">
                <field name="name"/>
                <field name="odoo_category_id"/>
                <field name="auto_apply"/>
                <field name="match_count"/>
            </list>
        </field>
    </record>

    <!-- Category Mapping: Form View -->
    <record id="view_category_mapping_form" model="ir.ui.view">
        <field name="name">product.ai.category.mapping.form</field>
        <field name="model">product.ai.category.mapping</field>
        <field name="arch" type="xml">
            <form string="AI Category Mapping">
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="e.g. Electronics > Smartphones"/>
                            <field name="odoo_category_id"/>
                        </group>
                        <group>
                            <field name="auto_apply"/>
                            <field name="match_count"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Category Mapping: Search View -->
    <record id="view_category_mapping_search" model="ir.ui.view">
        <field name="name">product.ai.category.mapping.search</field>
        <field name="model">product.ai.category.mapping</field>
        <field name="arch" type="xml">
            <search string="Search Mappings">
                <field name="name"/>
                <field name="odoo_category_id"/>
                <filter name="auto_apply" string="Auto Apply"
                        domain="[('auto_apply', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_category" string="Odoo Category"
                            context="{'group_by': 'odoo_category_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Category Mapping: Action -->
    <record id="action_category_mapping" model="ir.actions.act_window">
        <field name="name">AI Category Mappings</field>
        <field name="res_model">product.ai.category.mapping</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first AI category mapping
            </p>
            <p>
                Map AI-suggested categories to Odoo product categories.
                Enable <strong>Auto Apply</strong> to automatically assign
                the Odoo category when the AI suggests a matching category.
            </p>
        </field>
    </record>

</odoo>

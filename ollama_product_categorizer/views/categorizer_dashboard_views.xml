<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Dashboard Form View -->
    <record id="view_product_categorizer_dashboard_form" model="ir.ui.view">
        <field name="name">product.categorizer.dashboard.form</field>
        <field name="model">product.categorizer.dashboard</field>
        <field name="arch" type="xml">
            <form string="AI Product Categorizer" create="false" edit="false" delete="false">
                <header>
                    <button name="action_categorize_all"
                            string="Categorize All"
                            type="object"
                            class="btn-primary"
                            icon="fa-magic"
                            confirm="This will categorize all products without an AI category. Continue?"/>
                    <button name="action_open_mappings"
                            string="Manage Mappings"
                            type="object"
                            class="btn-secondary"
                            icon="fa-exchange"/>
                    <button name="action_open_config"
                            string="AI Config"
                            type="object"
                            class="btn-secondary"
                            icon="fa-cog"/>
                </header>
                <sheet>
                    <!-- AI Provider Banner -->
                    <div class="alert alert-info" role="alert">
                        <i class="fa fa-microchip me-2"/>
                        <strong>AI Provider:</strong>
                        <field name="ai_provider" readonly="1" class="fw-bold d-inline"/>
                        <span class="ms-2">|</span>
                        <strong class="ms-2">Model:</strong>
                        <field name="ai_model" readonly="1" class="d-inline"/>
                    </div>

                    <!-- Product Statistics -->
                    <h3 class="mt-2 mb-3">
                        <i class="fa fa-cubes me-2" style="color:#FF9800;"/>
                        Product Categorization Overview
                    </h3>
                    <div class="row mb-4">
                        <div class="col-lg-2 col-md-4 col-sm-6 mb-2">
                            <div class="card text-center" style="border-color:#FF9800;">
                                <div class="card-body py-2">
                                    <h3 class="mb-0" style="color:#FF9800;">
                                        <field name="total_products" readonly="1"/>
                                    </h3>
                                    <small class="text-muted">Total Products</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6 mb-2">
                            <div class="card text-center border-success">
                                <div class="card-body py-2">
                                    <h3 class="mb-0 text-success">
                                        <field name="categorized" readonly="1"/>
                                    </h3>
                                    <small class="text-muted">Categorized</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6 mb-2">
                            <div class="card text-center border-warning">
                                <div class="card-body py-2">
                                    <h3 class="mb-0 text-warning">
                                        <field name="uncategorized" readonly="1"/>
                                    </h3>
                                    <small class="text-muted">Uncategorized</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6 mb-2">
                            <div class="card text-center border-info">
                                <div class="card-body py-2">
                                    <h3 class="mb-0 text-info">
                                        <field name="total_mappings" readonly="1"/>
                                    </h3>
                                    <small class="text-muted">Mappings</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Confidence Breakdown -->
                    <h3 class="mb-3">
                        <i class="fa fa-signal me-2" style="color:#FF9800;"/>
                        Confidence Breakdown
                    </h3>
                    <div class="row mb-4">
                        <div class="col-lg-2 col-md-4 col-sm-6 mb-2">
                            <div class="card text-center" style="border-color:#4CAF50;">
                                <div class="card-body py-2">
                                    <h4 class="mb-0" style="color:#4CAF50;">
                                        <field name="high_confidence" readonly="1"/>
                                    </h4>
                                    <small class="text-muted">High (&gt;80%)</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6 mb-2">
                            <div class="card text-center" style="border-color:#FF9800;">
                                <div class="card-body py-2">
                                    <h4 class="mb-0" style="color:#FF9800;">
                                        <field name="medium_confidence" readonly="1"/>
                                    </h4>
                                    <small class="text-muted">Medium (40-80%)</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6 mb-2">
                            <div class="card text-center" style="border-color:#F44336;">
                                <div class="card-body py-2">
                                    <h4 class="mb-0" style="color:#F44336;">
                                        <field name="low_confidence" readonly="1"/>
                                    </h4>
                                    <small class="text-muted">Low (&lt;40%)</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <separator string="Quick Actions"/>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <button name="action_open_uncategorized"
                                    string="View Uncategorized Products"
                                    type="object"
                                    class="btn-primary me-2 mb-2"
                                    icon="fa-search"/>
                            <button name="action_open_mappings"
                                    string="Category Mappings"
                                    type="object"
                                    class="btn-secondary me-2 mb-2"
                                    icon="fa-exchange"/>
                            <button name="action_open_config"
                                    string="AI Configuration"
                                    type="object"
                                    class="btn-secondary me-2 mb-2"
                                    icon="fa-cog"/>
                            <button name="_refresh"
                                    string="Refresh"
                                    type="object"
                                    class="btn-secondary me-2 mb-2"
                                    icon="fa-refresh"/>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Dashboard Action -->
    <record id="action_product_categorizer_dashboard" model="ir.actions.act_window">
        <field name="name">AI Product Categorizer</field>
        <field name="res_model">product.categorizer.dashboard</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <!-- ============================================================ -->
    <!-- Menus                                                        -->
    <!-- ============================================================ -->

    <!-- Root Menu (App on Home Screen) -->
    <menuitem id="menu_product_categorizer_root"
              name="AI Categorizer"
              web_icon="ollama_product_categorizer,static/description/icon.png"
              sequence="302"/>

    <!-- Dashboard -->
    <menuitem id="menu_categorizer_dashboard"
              name="Dashboard"
              parent="menu_product_categorizer_root"
              action="action_product_categorizer_dashboard"
              sequence="1"/>

    <!-- Mappings -->
    <menuitem id="menu_categorizer_mappings"
              name="Category Mappings"
              parent="menu_product_categorizer_root"
              action="ollama_product_categorizer.action_category_mapping"
              sequence="10"/>

    <!-- Settings sub-menu -->
    <menuitem id="menu_categorizer_settings"
              name="Settings"
              parent="menu_product_categorizer_root"
              sequence="100"/>

</odoo>

<odoo>
    <data>
        <!-- List view for import logs -->
        <record id="view_code2asin_import_log_list" model="ir.ui.view">
            <field name="name">code2asin.import.log.list</field>
            <field name="model">code2asin.import.log</field>
            <field name="arch" type="xml">
                <list decoration-info="log_type == 'info'" decoration-success="log_type == 'success'" decoration-warning="log_type == 'warning'" decoration-danger="log_type == 'error'">
                    <header>
                        <button name="action_stop_import" string="Arrêter l'importation" type="object" class="btn-danger" confirm="Êtes-vous sûr de vouloir arrêter l'importation en cours ?"/>
                        <button name="action_refresh_logs" string="Rafraîchir" type="object" class="btn-secondary"/>
                    </header>
                    <field name="create_date"/>
                    <field name="name"/>
                    <field name="log_type"/>
                    <field name="user_id"/>
                    <field name="import_session_id"/>
                </list>
            </field>
        </record>

        <!-- Search view for import logs -->
        <record id="view_code2asin_import_log_search" model="ir.ui.view">
            <field name="name">code2asin.import.log.search</field>
            <field name="model">code2asin.import.log</field>
            <field name="arch" type="xml">
                <search string="Search Import Logs">
                    <field name="name"/>
                    <field name="import_session_id"/>
                    <field name="user_id"/>
                    <filter string="Information" name="info" domain="[('log_type', '=', 'info')]"/>
                    <filter string="Success" name="success" domain="[('log_type', '=', 'success')]"/>
                    <filter string="Warning" name="warning" domain="[('log_type', '=', 'warning')]"/>
                    <filter string="Error" name="error" domain="[('log_type', '=', 'error')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Import Session" name="group_by_session" context="{'group_by': 'import_session_id'}"/>
                        <filter string="User" name="group_by_user" context="{'group_by': 'user_id'}"/>
                        <filter string="Type" name="group_by_type" context="{'group_by': 'log_type'}"/>
                        <filter string="Date" name="group_by_date" context="{'group_by': 'create_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Form view for import logs -->
        <record id="view_code2asin_import_log_form" model="ir.ui.view">
            <field name="name">code2asin.import.log.form</field>
            <field name="model">code2asin.import.log</field>
            <field name="arch" type="xml">
                <form string="Import Log">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="log_type"/>
                            <field name="create_date"/>
                            <field name="user_id"/>
                            <field name="import_session_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action to open import logs -->
        <record id="action_code2asin_import_log" model="ir.actions.act_window">
            <field name="name">Import Logs</field>
            <field name="res_model">code2asin.import.log</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_group_by_session': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No import logs found
                </p>
                <p>
                    Import logs will appear here when you import products from Code2ASIN.
                </p>
            </field>
        </record>
    </data>
</odoo>
